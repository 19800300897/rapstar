<view>
    <view class="preview-caption">默认效果111</view>
    <gov-row-grid
        list="{{twoList}}">
    </gov-row-grid>
    <view class="preview-caption">有竖分割线</view>
    <gov-row-grid
        list="{{listHasLine}}"
        column-num="3"
        binditemclick="bindItemClick">
    </gov-row-grid>
    <view class="preview-caption">无竖分割线</view>
    <gov-row-grid
        list="{{listHasLine}}"
        column-num="3"
        has-line="{{false}}"
        binditemclick="bindItemClick">
    </gov-row-grid>
    <view class="preview-caption">有横分割线</view>
    <gov-row-grid
        list="{{listThree}}"
        column-num="3"
        binditemclick="bindItemClick">
    </gov-row-grid>
    <view class="preview-caption">无横分割线</view>
    <gov-row-grid
        list="{{listThree}}"
        column-num="3"
        has-line="{{false}}"
        binditemclick="bindItemClick">
    </gov-row-grid>
    <view class="preview-caption">无点击态</view>
    <gov-row-grid
        list="{{listHasLine}}"
        column-num="3"
        has-line="{{false}}"
        has-hover="{{false}}"
        binditemclick="onItemClick">
    </gov-row-grid>
    <view class="preview-caption">文本超过显示省略号</view>
    <gov-row-grid
        list="{{listMore}}"
        border-radius="50"
        column-num="3"
        has-line="{{false}}"
        binditemclick="bindItemClick">
    </gov-row-grid>
    <view class="preview-caption">自定义样式宫格</view>
    <gov-row-grid
        gov-title="gov-title"
        gov-image-class="gov-image-class"
        list="{{listThree}}"
        border-radius="50"
        has-border="{{false}}"
        column-num="3"
        has-hover="{{false}}"
        has-line="{{false}}"
        binditemclick="bindItemClick">
    </gov-row-grid>
</view>
