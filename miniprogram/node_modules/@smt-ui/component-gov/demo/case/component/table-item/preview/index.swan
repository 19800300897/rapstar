<view class="demo">
    <view class="title">默认样式</view>
    <gov-table-item
        main="{{main}}"
    >
    </gov-table-item>
    <view class="title">没有下边框线</view>
    <gov-table-item
        main="{{main}}"
        bottom-border="{{false}}"
    >
    </gov-table-item>
    <view class="title">改变下边框颜色</view>
    <gov-table-item
        main="{{main}}"
        bottom-border-color="#f00"
    >
    </gov-table-item>
    <view class="title">自定义样式</view>
    <gov-table-item
        class="gov-table-item"
        main="{{main}}"
        gov-content-item="content-item"
        gov-table-item-title="title-item"
        gov-table-item-desc="desc-item"
    >
    </gov-table-item>
    <view class="title">两行折断</view>
    <gov-table-item
        main="{{main1}}"
    >
    </gov-table-item>
</view>