<view>
	<view class="preview-caption">超出字数toast提示（默认状态）</view>
	<gov-textarea
		placeholder="请输入请求内容 1-42个字"
		maxlength="{{ 42 }}"
		show-exceed-toast
		has-border
	></gov-textarea>
	<view class="preview-caption">超出字数toast提示（默认状态）</view>
	<gov-textarea
		placeholder="请输入请求内容 1-400个字"
		exceed-toast="最多输入400字"
		maxlength="{{ 400 }}"
		show-exceed-toast
	></gov-textarea>
	<view class="box"></view>
	<gov-textarea
		placeholder="请输入请求内容，1-25个字"
		head="多行输入框 textarea 有灰色底边框线"
		maxlength="{{ 25 }}"
		show-tip
	></gov-textarea>
	<view class="box"></view>
	<gov-textarea
		placeholder="请输入内容, 1-999个字"
		head="多行输入框 textarea 无灰色底边框线"
		show-tip
	></gov-textarea>
	<view class="preview-caption">短标题textarea（默认状态）</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认标题"
		has-border
	></gov-textarea>
	<view class="preview-caption">短标题textarea（禁用状态）</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认标题"
		has-border
		disabled
	></gov-textarea>
	<view class="preview-caption">短标题textarea（error状态）</view>
	<gov-textarea
		title="默认标题"
		placeholder="请输入内容"
		status="{{ errorStatus }}"
		has-border
	></gov-textarea>
	<view class="preview-caption">短标题textarea（error状态 + notic图标）</view>
	<gov-textarea
		placeholder="请输入内容."
		title="默认标题"
		status="{{ errorStatus }}"
		gov-notice-icon="gov-notice-icon"
		notice-info="{{ noticeInfo }}"
		has-border
	></gov-textarea>
	<view class="preview-caption">长标题textarea（默认状态）</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认长长长长长长的标题"
		title-type="long"
		has-border
	></gov-textarea>
	<view class="preview-caption">长标题textarea（error状态）</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认长长长长长长的标题"
		title-type="long"
		status="{{ errorStatus }}"
		has-border
	></gov-textarea>
	<view class="preview-caption">长标题textarea（error状态 + notic图标）</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认长长长长长长长长长长长长长长长长长长的标题"
		title-type="long"
		status="{{ errorStatus }}"
		notice-info="{{ noticeList }}"
		gov-notice-icon="gov-notice-icon"
		has-border
	></gov-textarea>
	<view class="preview-caption">自定义样式</view>
	<gov-textarea
		placeholder="请输入内容"
		title="默认长长长长长长长长长长长长长长长长长长的标题"
		gov-textarea-title="text-title"
		gov-textarea-wrap="text-wrap"
		gov-notice-icon="gov-notice-icon"
		gov-textarea-element="gov-textarea-element"
		title-type="long"
		status="{{ errorStatus }}"
		icon="{{ icon }}"
		notice-info="{{ noticeList }}"
		has-border
	></gov-textarea>
</view>