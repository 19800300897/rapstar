<view>
    <view class="center">默认效果</view>
    <gov-grid
        list="{{listThree}}">
    </gov-grid>
    <view class="center">一行三列</view>
    <gov-grid
        list="{{listOne}}"
        border-radius="3"
        has-border="{{false}}"
        column-num="3"
        binditemclick="bindItemClick">
    </gov-grid>
    <view class="center">两行三列</view>
    <gov-grid
        list="{{listTwo}}"
        column-num="3"
        border-radius="25"
        has-hover="{{false}}"
        binditemclick="onItemClick">
    </gov-grid>
    <view class="center">一行四列</view>
    <gov-grid
        list="{{listThree}}"
        column-num="4"
        has-line="{{false}}"
        border-radius="50"
        binditemclick="bindItemClick">
    </gov-grid>
    <view class="center">一行五列</view>
    <gov-grid
        list="{{listFour}}"
        column-num="5"
        has-hover="{{false}}">
    </gov-grid>
</view>