 <view class="gov-wrap">
    <view class="gov-hor">
        <view class="gov-title">水平向上:</view>
        <view class="gov-content">
            <gov-button-group
                bind:buttonHandle="buttonHandle"
                button-group="{{buttonGroup1}}"
                button-arrange="top"
                gov-button-group="gov-button-group"
                button-position="horizontal">
            </gov-button-group>
        </view>
    </view>
    <view class="gov-hor">
        <view class="gov-title">水平向下:</view>
        <view class="gov-content">
            <gov-button-group
                bind:buttonHandle="buttonHandle"
                button-group="{{buttonGroup1}}"
                button-arrange="bottom"
                gov-button-group="gov-bottom"
                button-position="horizontal">
            </gov-button-group>
        </view>
    </view>
    <view class="gov-ver">
        <view class="gov-title">垂直向上:</view>
        <view class="gov-content">
            <gov-button-group
                bind:buttonHandle="buttonHandle"
                button-group="{{buttonGroup2}}"
                button-arrange="top"
                gov-button-group="gov-button-group"
                button-position="vertical">
            </gov-button-group>
        </view>
    </view>
    <view class="gov-ver">
        <view class="gov-title">垂直向下:</view>
        <view class="gov-content">
            <gov-button-group
                bind:buttonHandle="buttonHandle"
                button-group="{{buttonGroup2}}"
                button-arrange="bottom"
                gov-button-group="gov-bottom"
                button-position="vertical">
            </gov-button-group>
        </view>
    </view>
</view>