<view class="box">
    <view class="{{border ? 'bottom' : ''}}">
        <view class="upload" s-if="!inline">
            <view
                class="upload-box gov-upload-box"
                s-for="item, index in imageList"
            >
                <image
                    class="img gov-img"
                    src="{{item.path || item}}"
                    mode="{{imgMode}}"
                    data-index="{{index}}"
                    bind:tap="previewImage"
                ></image>
                <view
                    class="delete gov-delete"
                    data-index="{{index}}"
                    bind:tap="clickDelete"
                >
                    <gov-icon
                        class="close"
                        name="close"
                        color="#fff"
                        size="22.609rpx"
                    ></gov-icon>
                </view>
            </view>
            <view
                class="upload-box add-box gov-upload-box"
                bind:tap="clickUp"
                s-if="imageList.length != count"
            >
                <gov-icon
                    class="add-tn"
                    name="add-tn"
                    color="#e6e6e6"
                    size="104.609rpx"
                ></gov-icon>
            </view>
        </view>
        <view class="upload-inline" s-else>
            <view
                class="upload-inline-box gov-upload-inline-box"
                bind:tap="clickUp"
                s-if="imageList.length != 1"
            >
                <gov-icon
                    class="add-tn"
                    name="add-tn"
                    color="#ccc"
                    size="104.609rpx"
                ></gov-icon>
                <view class="upload-word gov-upload-word">点击上传</view>
            </view>
            <view
                s-for="item, index in imageList"
                class="upload-inline-box gov-upload-inline-box"
            >
                <image
                    class="img gov-inline-img"
                    src="{{item.path || item}}"
                    mode="{{imgMode}}"
                    data-index="{{index}}"
                    bind:tap="previewImage"
                ></image>
                <view
                    class="delete gov-inline-delete"
                    data-index="{{index}}"
                    bind:tap="clickDelete"
                >
                    <gov-icon
                        class="close"
                        name="close"
                        color="#fff"
                        size="22.609rpx"
                    ></gov-icon>
                </view>
            </view>
        </view>
        <view class="tips gov-tips">{{tips}}</view>
    </view>
</view>