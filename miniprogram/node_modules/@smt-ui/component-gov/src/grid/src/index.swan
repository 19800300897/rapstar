<view class="swan-grid {{isGridTight ? 'grid-tight' : ''}} {{hasLine ? 'swan-grid-hasline' : ''}}">
    <block s-for="item, index in list">
        <view class="grid-item gov-grid-item"
            hover-class="{{hasHover ? 'grid-item-hover' : ''}}"
            style="width:{{100 / columnNum}}%;"
            data-index="{{index}}"
            bind:tap="onItemClick">
            <view class="inner-grid-item gov-inner-grid-item">
                <view class="wrap-image">
                    <gov-image-item s-if="hasBorder"
                        image-width="{{imageWidth}}"
                        image-height="{{imageHeight}}"
                        border-radius="{{borderRadius}}"
                        image-src="{{item.icon}}">
                    </gov-image-item>
                    <image s-else
                        style="border-radius:{{borderRadius}}rpx; width:{{imageWidth}}rpx; height:{{imageHeight}}rpx"
                        src="{{item.icon}}"
                        mode="aspectFill">
                    </image>
                </view>
                <view class="text-info">
                    <view class="title gov-title">
                        <text>{{item.title}}</text>
                    </view>
                    <text s-if="item.desc" class="desc gov-desc">{{item.desc}}</text>
                </view>
                <view class="{{columnNum == 3 && list.length > 3  || index === list.length - 1 ? '' : 'grid-border-right'}}"></view>
            </view>
            <view class="{{list.length > columnNum ? (index >= bottomIndex ? '' : 'grid-border-bottom') : '')}}"></view>
        </view>
    </block>
</view>