.swan-grid 
    display flex
    flex-wrap wrap
    align-items center
    padding 0 40px

    &.grid-tight
        padding 0

    .grid-item 
        display flex
        flex-direction column
        align-items center
        box-sizing border-box
        justify-content center
        overflow hidden
        padding var(--v-spacing-md, 60px) 0 70px
        position relative

        .inner-grid-item 
            width 100%
            position relative

            .wrap-image 
                display flex
                justify-content center
                align-items center

            .text-info 
                text-align center
                padding 0 12px

                .title 
                    display block
                    font-size var(--font-size-xs, 42px)
                    height 50px
                    line-height 50px
                    margin-top 27px
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-align center
                    color var(--color-black, #000)
                    padding 0 var(--h-spacing-md, 51px)

                .desc 
                    width 100%
                    font-size 39px
                    height var(--v-spacing-md, 60px)
                    line-height var(--v-spacing-md, 60px)
                    color var(--color-gray-3, #999)
                    position absolute
                    left 0
                    bottom -55px
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-align center
                    box-sizing border-box
                    padding 0 12px
                    margin-top 12px 
    .grid-item-hover 
        opacity .5

.swan-grid-hasline 
    .grid-border-right 
        width 0
        height 100%
        border-right 3px solid var(--color-gray-6, #eee)
        position absolute
        right 0
        top 0
    .grid-border-bottom 
        height 0
        width 100%
        border-bottom 3px solid var(--color-gray-6, #eee)
        position absolute
        left 0
        bottom 0
        margin-top 7px
