@import "../../common/style/index"

.filter-single-list
    max-height 1000px
    overflow-y scroll
    -webkit-overflow-scrolling touch

    .select-item
        height 150px
        display flex
        justify-content space-between
        padding 0 51px
        align-items center
        list-hover-feedback()
        margin-top -1px
        font-size 48px

        .text
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            // 小米6须设置行高
            line-height 1.2

        .icon-selected
            display none
            // height 66px
            // width 66px

        &.border
            border-bottom-retina(, , 51px, 51px)

        &.selected
            .text
                color var(--color-red-1, #bd1a2d)

            .icon-selected
                display block
                // height 60px
                // width 60px
