<view class="filter-single-list gov-filter-singlelist">
    <view
        s-for="opt, optIdx in options"
        class="select-item {{optIdx !== options.length - 1 ? 'border' : ''}} {{opt.value === value ? 'selected' : ''}} {{!isIos ? 'android-patch': ''}}"
        key="{{opt[currOptionKey] || opt}}"
        data-value="{{opt.value}}"
        data-key="{{opt[currOptionKey]}}"
        data-idx="{{optIdx}}"
        catch:tap="selHdl"
        hover-class="list-hover-feedback"
        hover-stay-time="{{240}}"
        selected="{{opt.value === value}}"
        left="{{opt.value}}"
        right="{{value}}"
    >
        <text class="text" style="color: {{opt.value === value ? activeColor : fontColor}}">{{opt[currOptionKey] || opt}}</text>
        <gov-icon
            class="icon-selected"
            name="checkmark-o"
            color="{{activeColor}}"
            size="39.86rpx"
        />
    </view>
</view>
