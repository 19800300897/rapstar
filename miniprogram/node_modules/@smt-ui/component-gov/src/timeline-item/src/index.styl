.item-notail 
    .item-tail 
        display none
        
.timeline-item 
    position relative

    .item-tail 
        position absolute
        top 6px
        left 0
        width 6px
        height 100%
        background-color #ececec

    .item-head 
        position absolute
        top 0
        background var(--color-white, #fff)
        border 6px solid var(--color-white, #fff) 
        border-left none
        border-right none
        border-radius 0
        padding-top 1px
        box-sizing border-box
        margin 3px 0 0 -30px

    .item-content 
        width 1020px
        position relative
        top 0px
        padding-left 91px
        box-sizing border-box
        padding-bottom 130px

        .item-content-title 
            text-align left
            font-size var(--v-spacing-sm, 42px)
            font-family PingFangSC-Regular
            color var(--color-gray-3, #999)
            margin-top 10px

        .item-content-desc 
            text-align left
            font-size var(--font-size-md, 54px)

        .item-content-desc--finished 
            color var(--color-gray-2, #666)

        .item-content-desc--wait,
        .item-content-desc--success 
            color var(--color-black, #000)
            font-weight 700

        .item-content-desc--error 
            color var(--color-red, #c40311)
            font-weight 700

        .item-content-slot 
            font-size var(--font-size-sm, 48px)
            color var(--color-gray-2, #666)
            line-height 74px
            margin-top 10px
