<view>
    <button
        bindtap="clickFn"
        class="
            gov-btn-default gov-button
            {{buttonSize ? 'btn-' + buttonSize : ''}}
            {{buttonColor ? 'btn-' + buttonColor : ''}}
            {{buttonDisabled ? 'btn-disabled gov-button-disabled' : ''}}
            "
        disabled="{{buttonDisabled}}"
        >
        <slot name="icon">
            <image s-if="{{buttonIcon}}" class="btn-icon-img gov-button-icon" src="{{buttonIcon}}"></image>
        </slot>
        <text>{{ buttonText }}</text>
    </button>
</view>