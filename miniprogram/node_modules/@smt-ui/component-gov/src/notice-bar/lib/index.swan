<view
    s-if="show"
    class="{{icon ? 'ext-cls notice-bar' : 'ext-cls notice-bar no-padding'}}"
    style="
        {{bgColor ? 'background-color: ' + bgColor + ';' : ''}}
    "
>
    <slot>
        <slot name="left-icon"></slot>
        <view class="text-container">
            <slot name="text">
                <text
                    class="text text-cls"
                    bind:transitionend="aniEndHdl"
                    style="
                        {{textColor ? 'color: ' + textColor + ';' : ''}}
                        padding-left: {{infinite ? containerWidth + 'px' : ''}};
                    "
                    animation="{{animationData}}"
                >{{text}}</text>
            </slot>
        </view>
        <slot name="right-icon">
            <gov-icon s-if="{{icon}}" class="close-icon" name="{{iconName}}" color={{iconColor}} bind:tap="closeHdl">
            </gov-icon>
        </slot>
    </slot>
</view>