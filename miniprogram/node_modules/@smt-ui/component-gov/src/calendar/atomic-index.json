{
    "name": "gov-calendar",
    "label": "日历",
    "description": "日历组件",
    "codeSnap": "<gov-calendar\n    range=\"{{[{name: '2019-09', value: [{day: '2019-09-01', state: 1}]}]}}\"\n    value=\"{{{day: '2019-09-01', state: 1}}}\"\n>\n</gov-calendar>",
    "groups": "layout",
    "demoCode": {
        "s": "<gov-calendar\n        range=\"{{range}}\"\n        value=\"{{value}}\"\n        bind:dayclick=\"dayClick\"\n    >\n    </gov-calendar>",
        "js": "data: {\n    range: [\n        {\n            name: '2019-09',\n            value: [\n                {\n                    day: '2019-09-01',\n                    state: 0\n                },\n                {\n                    day: '2019-09-02',\n                    state: 1\n                },\n                {\n                    day: '2019-09-03',\n                    state: 1\n                },\n                {\n                    day: '2019-09-04',\n                    state: 1\n                },\n                {\n                    day: '2019-09-05',\n                    state: 1\n                },\n                {\n                    day: '2019-09-06',\n                    state: 1\n                },\n                {\n                    day: '2019-09-07',\n                    state: 0\n                }\n            ]\n        },\n        {\n            name: '2019-10',\n            value: [\n                {\n                    day: '2019-10-01',\n                    state: 0\n                },\n                {\n                    day: '2019-10-02',\n                    state: 0\n                },\n                {\n                    day: '2019-10-03',\n                    state: 0\n                },\n                {\n                    day: '2019-10-04',\n                    state: 0\n                }\n            ]\n        }\n    ],\n    value: {day: '2019-09-05', state: 1}\n}",
        "css": ""
    },
    "properties": {
        "attributes": [
            {
                "name": "type",
                "type": "String",
                "description": "日历类型",
                "required": "否",
                "default": "month"
            },
            {
                "name": "value",
                "type": "Object",
                "description": "默认选中日期",
                "required": "是",
                "default": ""
            },
            {
                "name": "range",
                "type": "Array",
                "description": "日历数据",
                "required": "是",
                "default": ""
            },
            {
                "name": "separation",
                "type": "String",
                "description": "连接年月日的符号",
                "required": "否",
                "default": "-"
            },
            {
                "name": "repeatable",
                "type": "Boolean",
                "description": "选中的日期是否可以多次点击",
                "required": "否",
                "default": "false"
            },
            {
                "name": "disabled",
                "type": "Boolean",
                "description": "禁用该组件",
                "required": "否",
                "default": "false"
            },
            {
                "name": "allDayValid",
                "type": "Boolean",
                "description": "所有日期是否可选",
                "required": "否",
                "default": "false"
            },
            {
                "name": "weekText",
                "type": "Array",
                "description": "星期默认文案",
                "required": "否",
                "default": "['日', '一', '二', '三', '四', '五', '六']"
            },
            {
                "name": "showOptionPanel",
                "type": "Boolean",
                "description": "是否展示",
                "required": "否",
                "default": "true"
            }
        ],
        "events": [
            {
                "name": "dayclick",
                "type": "Event",
                "description": "点击日历中的某个日期",
                "required": "否",
                "default": "-"
            },
            {
                "name": "change",
                "type": "Event",
                "description": "改变选中的日期",
                "required": "否",
                "default": "-"
            }
        ]
    }
}