@import "../../common/style/index"

.title-wrap
    padding 53px var(--h-spacing-md, 51px)

    .title
        font-weight 700

    .small
        font-size var(--font-size-sm, 48px)
        line-height 71px

    .middle
        font-size var(--font-size-md, 54px)
        line-height 82px

    .large
        font-size var(--font-size-lg, 66px)
        line-height 96px

    .desc
        color var(--color-gray-3, #999)

    .middle-desc
        font-size var(--font-size-xs, 42px)
        margin-top 5px
        line-height 62px
        margin-bottom 7px

    .turn-title
        font-size var(--font-size-xs, 42px)
        color var(--color-gray-3, #999)

    .large-desc
        font-size var(--font-size-sm, 48px)
        margin-top 9px
        line-height 72px
        margin-bottom 5px

    .turn
        display flex
        align-items center

        .arrow-icon
            display flex
            align-self center

.turn-wrap
    .title
        max-width 888px

    .turn-content
        display flex
        justify-content space-between

    &:active
        background: rgba(0, 0, 0, .05)

.border
    padding 0 51px

    .custom-border
        height 1px
        background var(--color-gray-7, #f5f5f5)

    .ios-border
        transform scaleY(.5)
        background var(--color-gray-5, #e6e6e6)