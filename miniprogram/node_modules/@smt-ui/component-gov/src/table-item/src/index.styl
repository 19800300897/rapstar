@import "../../common/style/index"
.content-item 
    display flex

    .table-item-title
        flex 1
        color var(--color-gray-2, #666)
        padding 0 var(--h-spacing-md, 51px)
        margin 40px 0 37px
        line-height 74px
        display flex
        justify-content flex-start
        align-items center
        font-size var(--font-size-sm, 48px)
        font-family PingFangSC-Regular
        letter-spacing 0
        text-overflow -o-ellipsis-lastline
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        line-clamp 2
        -webkit-box-orient vertical
        position relative

        .gov-icon
            position absolute
            bottom 0
            right 0

    .table-item-desc
        display inline-block
        flex 1
        color var(--color-black, #000)
        padding 0 var(--h-spacing-md, 51px)
        margin 40px 0 37px
        text-align left
        font-size var(--font-size-sm, 48px)
        font-family PingFangSC-Regular
        letter-spacing 0

.content-item-line
    height 1px
    border-bottom-retina()