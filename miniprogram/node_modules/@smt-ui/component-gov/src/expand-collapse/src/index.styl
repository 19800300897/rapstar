.expand-collapse 
	background var(--color-white, #fff)
	padding var(--v-spacing-sm, 42px) 0 38px 0

	.full
		overflow hidden
		position relative

		.gradient
			position absolute
			bottom 0
			z-index 1
			width 100%
			height 70px
            
	.action-panel-full
		display flex
		justify-content center
		align-items center
		text-align center

		&.expand
			margin-top 26px
			margin-op 0

		.btn-text
			margin-right 27px
