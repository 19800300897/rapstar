.mark
    display none
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .65)
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 100

.show-mark
    display block

.voice-panel
    width 100%
    height 870px
    background-color var(--color-white, #fff)
    position fixed
    bottom 0
    left 0
    right 0
    border-radius 45px 45px 0 0
    transform translate3d(0, 100%, 0)
    z-index 101

.preloading
    position absolute
    top 0
    left 0
    width 1px
    height 1px
    visibility hidden

    .image
        height 100%
        width 100%

.show-voice-box .voice-panel
    transform translate3d(0, 0, 0)

.btn-close
    position absolute
    right 0
    top 0
    padding 54px
    text-align center

.icon-close
    width 60px
    height 60px
    background url('data:image/png;base64,') no-repeat center center
    background-size 100% auto

.panel-content
    padding 119px 0 12px
    display flex
    flex-direction column
    align-items center
    box-sizing border-box
    justify-content space-between
    height 100%

.word-box
    height 227px
    margin-top 55px
    line-height 88px
    width 100%
    text-align center
    padding 0 170px
    box-sizing border-box
    font-size 60px
    color var(--color-black, #000)
    overflow hidden
    display flex
    flex-direction column
    align-items center

.no-margin-top
    margin-top 0

.animate-box
    height 354px
    width 100%
    display flex
    flex-direction column
    align-items center
    flex-shrink 0

    .image
        width 100%
        height 100%

.btn-voice-wrap
    width 100%

.btn-voice
    height 120px
    display flex
    align-items center
    justify-content center
    border-radius 12px
    color #2b99ff
    font-size var(--font-size-md, 54px)
    flex-shrink 0
    background-color var(--color-white, #fff)

.btn-voice-icon
    display inline-block
    margin-right 24px

.btn-voice-text
    display inline-block

.ios-voice-box
    .btn-voice
        border-top none

        &::after
            content ""
            position absolute
            bottom .5
            left 0
            right 0
            width 100%
            height 1px
            transform scaleY(.5)
            transform-origin 0 0

.btn-voice-hover
    opacity .5

.voice-panel-ipx
    padding-bottom 34px

.button-voice
    display flex !important
    align-items center
    justify-content center
    height 120px !important
    font-size var(--font-size-sm, 48px) !important

.button-icon-voice
    width 66px !important
    height 66px !important
    margin-top 0 !important