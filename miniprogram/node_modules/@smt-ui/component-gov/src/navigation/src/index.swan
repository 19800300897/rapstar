<view class="navigation gov-navigation-container {{homeIcon ? 'home-icon' : ''}}">
    <view class="fixed gov-navigation-fixed {{border ? 'border' : ''}} {{!isIos ? 'android-patch': ''}}"
        style="
            height: {{navHeight}}px;
            padding-top: {{statusHeight}}px;
        "
    >
        <slot name="back-icon">
            <view class="back-icon gov-back-icon"
                hover-class="btn-hover-feedback"
                hover-stay-time="{{240}}"
                bind:touchstart="backHdl"
            />
        </slot>
        <slot><view class="title gov-title">{{title}}</view></slot>
    </view>
    <view class="placeholder" style="height: {{statusHeight + navHeight}}px"></view>
</view>