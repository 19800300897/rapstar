@import "../../common/style/index"
@import "../../common/style/radioInFilter"

.radio-box-group
    display flex
    flex auto
    flex-flow row wrap

    .radio-box-group-wrap
        display flex
        flex auto
        flex-flow column nowrap

        &.inline
            flex-flow row wrap
            justify-content space-between

            .row
                display flex
                flex auto
                justify-content space-between

                &.border
                    border-bottom-retina(, , 0, 0)

                .radio-box
                    display flex
                    no-border()
