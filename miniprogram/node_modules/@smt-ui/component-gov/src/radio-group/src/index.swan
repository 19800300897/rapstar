<view class="radio-box-group gov-radio-group" style="{{groupStyle}}">
    <view
        s-if="inline"
        class="radio-box-group-wrap inline {{inFilter ? 'in-filter' : ''}}"
    >
        <view
            s-for="items, index in currRowOptions"
            class="
                row
                {{index ? 'not-first' : ''}}
                {{index === 0 ? 'first-line' : ''}}
                {{(noLastBorder && index === currRowOptions.length - 1) ? '' : border ? !isIos ? 'border android-patch' : 'border' : ''}}
            "
            style="{{rowStyle}}"
        >
            <gov-radio
                s-for="item, idx in items"
                class="radio-box {{idx === items.length - 1 ? 'last' : ''}}"
                style="{{itemStyle}}"
                two-column="{{column === 2}}"
                inline
                in-filter="{{inFilter}}"
                cancelable="{{cancelable}}"
                value="{{item.checked}}"
                disabled="{{item.disabled}}"
                desc="{{item.desc}}"
                data-info="{{{index, column, idx, desc: item.desc, disabled: !!item.disabled}}}"
                bindchange="itemChange"
                bindclick="clkHdl"
                active-color="{{activeColor}}"
                active-bg-color="{{activeInlineBgColor}}"
            >
                {{item[currOptionKey || 'name']}}
            </gov-radio>
        </view>
    </view>
    <view s-else class="radio-box-group-wrap">
        <gov-radio
            class="radio-box"
            s-for="item, idx in currOptions"
            style="{{itemStyle}}"
            value="{{item.checked}}"
            disabled="{{item.disabled}}"
            desc="{{item.desc}}"
            border="{{!(idx === currOptions.length - 1 && noLastBorder)}}"
            data-info="{{{index, column, idx, desc: item.desc, disabled: !!item.disabled}}}"
            text-style="padding-left: {{tick ? 'unset' : listTextGap}}"
            bindchange="itemChange"
            bindclick="clkHdl"
            tick="{{tick}}"
            active-color="{{activeColor}}"
        >
            {{item[currOptionKey || 'name']}}
        </gov-radio>
    </view>
</view>
