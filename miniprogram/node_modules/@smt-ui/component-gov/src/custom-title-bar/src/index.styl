@import "../../common/style/index"

.fixed-nav-bar 
    opacity 0

.opacity-nav-bar,
.fixed-nav-bar 
    position fixed
    width 100%
    top 0
    left 0
    z-index 10

    .title-area-bar 
        width 100%
        position relative
        display flex
        align-items center
        justify-content center
        font-size var(--font-size-md, 54px) 
        font-weight 700

        .custom-top-icon 
            display flex
            height 100%
            align-items center
            position absolute
            top 0
            left 6px
            z-index 2

            .icon-back,
            .icon-home 
                width 156px
                height 100%
                text-align center
                display flex
                align-items center
                justify-content center

            .icon-back image,
            .icon-home image 
                width var(--font-size-lg, 66px)
                height var(--font-size-lg, 66px)
        
        .page-title 
            width 432px
            text-align center
            overflow hidden
            text-overflow ellipsis
            white-space nowrap

    .title-left 
        justify-content flex-start
        padding 0 354px 0 51px
        box-sizing border-box

        .page-title
            width 100%
            text-align left

    .front-white 
        color var(--color-white, #fff) 

    .front-black 
        color var(--color-black, #000)

.ios-nav-bar 
    .title-left 
        .page-title 
            width 100%
            text-align left
    
    .title-area-bar 
        font-size 54px
        font-weight 600
    
    .page-title 
        width 480px

.ios-border-bottom
    border-bottom-retina(--color-gray-5, 100%, 0, 0, --color-gray-7)

@media only screen and (-webkit-min-device-pixel-ratio 2) 
    .ios-nav-bar 
        .title-area-bar 
            font-size var(--font-size-xms, 36px) 
    


@media only screen and (-webkit-min-device-pixel-ratio 3) 
    .ios-nav-bar 
        .title-area-bar 
            font-size var(--font-size-md, 54px) 
    

