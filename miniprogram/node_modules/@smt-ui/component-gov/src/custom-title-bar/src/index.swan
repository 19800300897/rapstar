<view>
    <!--常规bar-->
    <view s-if="!hideCommonBar" class="common-nav-bar">
        <view class="opacity-nav-bar gov-opacity-nav-bar {{isIos ? 'ios-nav-bar' : 'android-patch'}} {{commonHasBorder ? (isIos ? 'ios-border-bottom' : '') : ''}}" style="background-color: {{commonBgColor}};">
            <view class="status-bar" style="height:{{statusBarHeight}}px;"></view>
            <view class="title-area-bar gov-title-area-bar {{'#ffffff' == commonFrontColor ? 'front-white' : 'front-black'}} {{commonTextAlign === 'left' ? 'title-left' : ''}}" style="height:{{navigationBarHeight}}px">
                <view class="custom-top-icon">
                    <view s-if="needToReturn" bind:tap="goToBack" class="icon-back">
                        <image s-if="{{'#ffffff' == commonFrontColor}}" src="./{{isShowBackHomeIcon ? '../images/icon-home@3x.png' : '../images/icon-back@3x.png'}}"></image>
                        <image s-else src="./{{isShowBackHomeIcon ? '../images/icon-home-gray@3x.png' : '../images/icon-back-gray@3x.png'}}"></image>
                    </view>
                </view>
                <view class="page-title gov-page-title">{{commonTitle}}</view>
            </view>
        </view>
        <view s-if="!commonBgOpacity" class="blank-top-bar" style="height:{{statusBarHeight+navigationBarHeight}}px;"></view>
    </view>

    <!--固定bar-->
    <view s-if="showFixedBar" class="fixed-nav-bar gov-fixed-nav-bar {{isIos ? 'ios-nav-bar' : 'android-patch'}} {{fixedHasBorder ? (isIos ? 'ios-border-bottom' : '') : ''}}" style="background-color:{{fixedBgColor}}; opacity:{{fixedOpacity}};">
        <view class="status-bar" style="height:{{statusBarHeight}}px;"></view>
        <view class="title-area-bar gov-title-area-bar {{'#ffffff' == fixedFrontColor ? 'front-white' : 'front-black'}} {{fixedTextAlign === 'left' ? 'title-left' : ''}}" style="height:{{navigationBarHeight}}px">
            <view class="custom-top-icon">
                <view s-if="needToReturn" bind:tap="goToBack" class="icon-back">
                    <image s-if="{{'#ffffff' == fixedFrontColor}}" src="./{{ isShowBackHomeIcon ? '../images/icon-home@3x.png' : '../images/icon-back@3x.png'}}"></image>
                    <image s-else src="./{{isShowBackHomeIcon ? '../images/icon-home-gray@3x.png' : '../images/icon-back-gray@3x.png'}}"></image>
                </view>
            </view>
            <view class="page-title gov-page-title">{{fixedTitle}}</view>
        </view>
    </view>
</view>