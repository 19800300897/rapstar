@import "../../common/style/index"

.gov-textarea 
    background var(--color-white, #fff)

    .list-title
        display -webkit-box !important

    .textarea-item
        padding 45px  var(--h-spacing-md, 51px) 32px
        display flex

        &.hasborder
            border-bottom-retina(, , 51px, 51px)

    .textarea-title
        font-size var(--font-size-md, 54px)
        color var(--color-gray-2, #666)
        margin-right 57px
        width 218px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

    .textarea-title-long
        width 328px
        height 144px
        line-height 80px
        display -webkit-box
        margin-top -4px
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        overflow hidden
        white-space normal
        word-wrap break-word
        word-break break-all

    .textarea-item-error
        .textarea-title
            color var(--color-red, #c40311)

    .textarea-wrapper
        flex 1
        color var(--color-black, #000)

        .textarea-element
            width 100%
            margin-top 6px
            line-height 1.48
            height 296px
            font-size var(--font-size-md, 54px)

        .element-content
            height 460px
            padding-top 3px

        .element-input
            height 170px

        .length-tip
            justify-content flex-end
            align-items center
            display flex
            padding 35px 0 5px
            font-size var(--font-size-sm, 48px)
            vertical-align middle
            color var(--color-gray-3, #999)
            align-self flex-end

            &.error
                color var(--color-red-1, #bd1a2d)

    .notice-icon
        margin 0 -24px 0 16px
        padding-top 13px
