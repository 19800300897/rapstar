@import "../../common/style/index"

.swiper-table-wrap
    background var(--color-white, #fff)
    position relative
    display flex
    align-items center
    overflow hidden

    .table-left-wrap
        float left

        .table-left-item
            width 294px
            height 144px
            line-height 73px
            font-family PingFangSC-Regular
            font-size var(--font-size-sm, 48px)
            color var(--color-gray-2, #666)
            padding 38px var(--h-spacing-md, 51px)
            box-sizing border-box
            letter-spacing 0
            position relative
            border-bottom-retina(, 1px, , , #e6e6e6, ,)

            .table-left-long
                line-clamp2()

            .detail-icon
                position absolute
                right 18px
                bottom 42px

        .table-item-six
            width 421px

        .table-item-height
            width 421px
            height 213px

    .table-right-wrap
        float left
        position relative

        .table-right-item
            width 100%
            height 144px
            display flex
            align-items center

            .each-row
                height 100%
                border-bottom-retina(, 1px, , , #e6e6e6, ,)

                .each-row-item
                    width 246px
                    height 100%
                    line-height 73px
                    font-family PingFangSC-Regular
                    font-size var(--font-size-sm, 48px)
                    color var(--color-gray-2, #666)
                    padding 38px var(--h-spacing-md, 51px)
                    box-sizing border-box
                    letter-spacing 0
                    position relative
                    line-clamp2()

                    .table-right-long
                        overflow hidden

                    .detail-icon
                        position absolute
                        right 18px
                        bottom 42px

                .table-right-color
                    color var(--color-black, #000)

                .table-item-six
                    width 421px
                    line-clamp2()

                .table-item-four
                    width 294px
                    line-clamp2()

        .ios-resilience
            position absolute
            width 100%
            z-index 0

        .table-right-item-1
            width 100%
            height 144px
            display flex
            align-items center
            border-bottom-retina(, 1px, , , #f00, ,)

        .table-item-height
            height 213px

    .mask-cover-wrap
        width 108px
        height 100%
        position absolute
        top 0
        right 0
        background-image linear-gradient(270deg, #fff 0%, rgba(255,255,255,0.00) 100%)

