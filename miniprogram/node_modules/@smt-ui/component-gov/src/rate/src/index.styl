@import "../../common/style/index"

.rate
    padding 0 var(--h-spacing-md, 51px)

    .rate-container
        box-sizing border-box
        display inline-block
        vertical-align middle

        .rate-icon
            display inline-block
            background transparent

            &:not(last-child)
                margin-right 45px

    .rate-text
        display inline-block
        text-align left
        margin-left 25px
        font-size var(--font-size-md, 54px)
        color var(--color-gray-4, #ccc)
        line-height 54px
        vertical-align middle
