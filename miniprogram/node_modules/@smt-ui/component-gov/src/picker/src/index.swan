<view>
    <view class="
            picker
            gov-picker
            {{noborder ? '' : 'border'}}
            {{isIos ? '' : 'android-patch'}}
        ">
        <view
            class="label gov-lable"
            style="
                width: {{labelWidth}};
                color: {{errStatus ? errColor : ''}}
            "
        >
            {{label}}
        </view>
        <picker
            class="picker-content gov-content"
            mode="{{mode}}"
            value="{{value}}"
            range="{{range}}"
            range-key="{{rangeKey}}"
            bind:change="selectorChange"
            bind:cancel="cancel"
            bindtap="selectorClick"
            start="{{start}}"
            end="{{end}}"
            disabled="{{disabled}}"
            bind:columnchange="bindMultiPickerColumnChange"
        >
            <view
                s-if="mode !== 'location'"
                class="
                    date-value
                    {{!content ? 'placeholder' : ''}}
                "
            >
                {{!content ? placeholder : content}}
            </view>
            <view
                s-else
                class="
                    date-value
                    {{!locationName ? 'placeholder' : ''}}
                "
            >
                {{!locationName ? placeholder : locationName}}
            </view>
            <gov-icon
                class="arrow-icon"
                name="{{disabled ? 'ban-o' : 'arrow-right-o'}}"
                color="#ccc"
                size="32.609rpx"
            ></gov-icon>
        </picker>
    </view>
</view>