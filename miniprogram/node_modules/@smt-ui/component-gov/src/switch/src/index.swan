<view
    class="{{wrapClasses}}"
    catchtap="toggle"
    style="background-color: {{currentValue === trueValue ? activeColor : inactiveColor}};border-color: {{currentValue === trueValue ? activeColor : ''}}"
>   
    <view class="before gov-before-class"></view>
    <view class="{{innerClasses}} gov-inner-class">
        <slot name="open" s-if="{{currentValue === trueValue}}"></slot>
        <slot name="close" s-if="{{currentValue === falseValue}}"></slot>
    </view>
    <view class="after gov-before-after"></view>
</view>