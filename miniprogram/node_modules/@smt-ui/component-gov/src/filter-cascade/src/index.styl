@import "../../common/style/index"

.filter-cascade
    display flex

    .column
        display flex
        flex-flow column nowrap
        font-size var(--font-size-xs, 42px)
        flex auto
        padding 0 0 33px
        height 1000px
        box-sizing border-box
        overflow hidden

        &-0
            width 360px
            // background #f7f7f7 url(../images/dot.png) right repeat-y
            background #f7f7f7
            flex none

            .item
                padding 0 75px 0 51px

        &-1
            .item
                padding 0 51px 0 90px

        .item
            display flex
            justify-content space-between
            align-items center
            height 144px
            line-height 1.4375
            box-sizing border-box
            width 100%
            white-space nowrap
            flex none
            list-hover-feedback()

            &-text
                text-overflow ellipsis
                overflow hidden

            &-icon
                visibility hidden
                height 66px
                width 66px
                flex none

            &.selected
                color var(--color-red-1, #bd1a2d)

                .item-icon
                    visibility visible

    &.three-columns /* 三列样式覆盖 */
        .column
            .item
                white-space normal
                height unset
                padding 41.5px 48px 42.5px

                &-text
                    text-overflow ellipsis
                    overflow hidden
                    display -webkit-box
                    -webkit-box-orient vertical
                    -webkit-line-clamp 2

            &-0
                width 360px
                flex none

                .item
                    padding-left var(--h-spacing-md, 51px)
            &-1
                background #fff url(../images/dot.png) right repeat-y
                width 360px
                flex none

            &-2
                .item
                    padding-right var(--h-spacing-md, 51px)
