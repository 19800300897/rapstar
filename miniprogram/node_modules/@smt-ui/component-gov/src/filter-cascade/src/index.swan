<view class="filter-cascade gov-filter-cascade {{currentOptions.length >= 3 ? 'three-columns' : ''}}"
    catch:tap="panelClk"
>
    <scroll-view
        s-for="column, index in currentOptions"
        class="column gov-filter-column {{'column-' + index}}"
        scroll-y
        scroll-top="{= scrollTops[index] =}"
        scroll-with-animation="{{animate}}"
        scroll-into-view="{= targets[index] =}"
        key="{{column[index][currOptionKey] || column[index]}}"
        current-options="{{currentOptions}}"
    >
        <view
            s-for="item, idx in column"
            id="{{'item-idx-' + idx}}"
            class="{{'item-idx-' + idx}}"
            key="{{item[currOptionKey] || item}}"
        >
            <view class="item {{idx === column.length - 1 ? 'last': ''}} {{currentValue[index] === idx ? 'selected': ''}}"
                selected="{{idx === currentValue[index] || idx === lastValue[index]}}"
                current-value="{{currentValue}}"
                data-index="{{index}}"
                data-idx="{{idx}}"
                data-item="{{item}}"
                catch:tap="clkHdl"
                hover-class="list-hover-feedback"
                hover-stay-time="{{240}}"
            >
                <text class="item-text" style="color: {{currentValue[index] === idx ? activeColor : fontColor}}">{{item[currOptionKey] || item}}</text>
                <gov-icon
                    s-if="index === currentOptions.length - 1"
                    class="item-icon"
                    name="checkmark-o"
                    color="{{activeColor}}"
                    size="39.86rpx"
                />
            </view>
        </view>
    </scroll-view>
</view>
