    "codeSnap": "",
    "groups": "layout",
    "demoCode": {
        "s": ""
    },
    "fragement": "",
    "properties": {
        "attributes": [
            {
                "name": "options",
                "type": "Array",
                "description": "筛选项数据",
                "required": "是",
                "default": "[]"
            },
            {
                "name": "optionKey",
                "type": "String",
                "description": "通过 option-key 来指定 options 中 key 的值作为筛选项显示的内容",
