/* 自定义组件的css，样式只作用于该自定义组件 */
.w-steps 
    width 100%
    padding 72px 0 67px
    background var(--color-white, #fff)
    box-sizing border-box
    overflow-y hidden
    overflow-x auto

    &-flex 
        display flex

    &-block 
        white-space nowrap

    &-flex,
    &-block
        .w-step 
            position relative
            box-sizing border-box
            vertical-align top

            &:last-child 
                .w-step-line 
                    display none

            &.is-flex 
                flex 1

            &.is-block 
                display inline-block

            &-head 
                text-align center

            &-line 
                position absolute
                height 0
                left calc(50% + 62px)
                right calc(-50% + 62px)

            &-head 
                position relative

                .gov-icon 
                    display inline-block
                    width var(--v-spacing-md, 60px)
                    height var(--v-spacing-md, 60px)

                .w-step-icon 
                    display inline-flex
                    vertical-align middle
                    align-items center
                    justify-content center
                    text-align center
                    width var(--v-spacing-md, 60px)
                    height var(--v-spacing-md, 60px)

            &-main 
                margin-top 2px

                .w-step-title 
                    font-size var(--font-size-sm, 48px)
                    line-height 74px
                    white-space normal
                    text-align center
                    color var(--color-gray-4, #ccc) 
                    overflow hidden
                    text-overflow ellipsis
                    display -webkit-box
                    -webkit-line-clamp 2
                    line-clamp 2
                    -webkit-box-orient vertical
                
                .twoSteps
                    width 300px
                    margin-left 160px
                
                .threeSteps
                    width 300px
                    margin-left 58px

                .fourSteps
                    width 250px
                    margin-left 31px
                
                .moreSteps
                    width 250px
                    margin-left 31px
                    
                .w-step-desc 
                    font-size var(--font-size-xs, 42px)
                    line-height 63px
                    margin-top 9px
                    white-space normal
                    text-align center
                    color var(--color-gray-3, #999)
                    overflow hidden
                    display -webkit-box
                    -webkit-line-clamp 2
                    line-clamp 2
                    -webkit-box-orient vertical

