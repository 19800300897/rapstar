@import "../../common/style/index"

.collapse-wrap
    background var(--color-white, #fff)

    .collapse-content
        padding-top 90px !important
    
    .collapse-item

        &-show-custom
            height auto

        &-content
            height 0
            overflow hidden

        &-show-content
            height auto
            animation showContent .25s
            border-radius 30px
            margin 0 var(--h-spacing-md, 51px)
            padding-bottom 40px

            &.gov-list-item
                background var(--color-gray-7, #f5f5f5)
                padding-bottom 0
                margin-bottom var(--v-spacing-md, 60px)

            &.gov-margin
                padding-bottom 40px
                margin 0

            .gov-label
            .gov-content
            .item-text
                font-size var(--font-size-sm, 48px)
                padding 5px 0 8px
                line-height 1.6 !important

            .gov-label
                color var(--color-gray-2, #666)

        &-arrow-down,
        &-arrow-up
            display flex
            align-self center

        &-arrow-down
            margin-top -5px
            transition transform .2s ease-in-out

        &-arrow-up
            margin-top 10px
            transform rotate(180deg)

        &-title-wrap
            padding 54px var(--h-spacing-md, 51px) 36px
            display flex
            flex-wrap nowrap
            align-items center

        &-title
            margin-right 70px
            vertical-align middle
            flex 1 1 auto

        &-title-content
            font-size var(--font-size-md, 54px)
            letter-spacing 0
            line-height 80px
            line-clamp2()

        &-title-desc
            margin-top 7px
            font-size var(--font-size-xs, 42px)
            color var(--color-gray-3, #999)
            letter-spacing 0
            line-height 68px

        &-title-desc:nth-child(3)
            margin-top 2px

        &-sub-title
            text-align right
            font-size var(--font-size-md, 54px)
            width 216px
            ellipsis()

        &-list-item
            padding 0 25.362rpx !important /* 42px */

    .gov-label-gray,
    .gov-content-gray
        font-size var(--font-size-md, 54px)
        line-height 1.45 !important
        padding 33px 0 39px !important
    .gov-label-gray
        color #666 !important
        
    .item-border
        border-bottom-retina(, , 51px, 51px)

    .item-default-text
        line-height 1.5
        padding-bottom 14px
        margin-top -3px

    .list-box
        padding 18px 0

@keyframes showContent {
    0% {
        opacity .6
        transform translate(0, -36rpx)
    }
    100% {
        opacity 1
        transform translate(0, 0)
    }
}