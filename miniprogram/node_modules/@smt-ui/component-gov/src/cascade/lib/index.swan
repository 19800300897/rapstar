<view>
    <view
        class="
            picker
            gov-picker
            {{noborder ? '' : 'border'}}
            {{isIos ? '' : 'android-patch'}}
        "
    >
        <view class="label-box gov-lable"
            style="
                width: {{labelWidth}};
                color: {{errStatus ? errColor : ''}}
            "
        >
            {{label}}
        </view>
        <view class="box">
            <view
                s-for="item,index in range"
                class="
                    picker-content
                    gov-content
                    {{range.length - 1 <= index ? '' : 'border'}}
                    {{isIos ? '' : 'android-patch'}}
                "
                data-index="{{index}}"
                bind:tap="tap"
            >
                <picker
                    class="picker-flex gov-picker-content"
                    data-index="{{index}}"
                    data-range="{{item}}"
                    mode="selector"
                    value="{{value[index]}}"
                    range="{{item}}"
                    range-key="{{rangeKey}}"
                    bind:change="selectorChange"
                    disabled="{{!content[index - 1] && index !== 0 && disabled || index !== value.length && index !== 0 && !content[index] ? true : false}}"
                >
                    <view class="
                        date-value
                        {{!content[index] ? 'placeholder' : ''}}
                    ">
                        {{!content[index] ? placeholder[index] : content[index]}}
                    </view>
                    <gov-icon
                        class="arrow-icon"
                        name="{{!content[index - 1] && index !== 0 && disabled ? 'ban-o' : 'arrow-right-o'}}"
                        color="#ccc"
                        size="32.609rpx"
                    ></gov-icon>
                </picker>
            </view>
        </view>
    </view>
</view>