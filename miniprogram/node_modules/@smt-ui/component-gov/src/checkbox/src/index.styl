@import "../../common/style/inFilter"
.check-box-item
    display flex
    align-items flex-start
    padding 45px 0
    color var(--color-black, #000)

    &-icon
        width 66px
        height 66px
        flex-shrink 0
        vertical-align middle

    &-text
        font-size 48px
        line-height 1.33
        padding-left 21px
        vertical-align middle

        .desc
            font-size var(--font-size-sm, 48px)
            line-height 1.4375
            color var(--color-gray-2, #666)

    &.inline
        position relative
        display flex
        justify-content center
        align-items center
        min-height 144px
        width 360px
        padding 15px 51px
        box-sizing border-box
        font-size var(--font-size-xs, 42px)
        color var(--color-gray-1, #333)
        background-color var(--color-gray-7, #f5f5f5)
        border-radius 15px
        overflow hidden

        .check-box-item-icon
            position absolute
            z-index 1
            right -9px
            bottom -12px
            width 75px
            height 75px
            background-image none

        .check-box-item-text
            padding-left unset
            text-align center
            line-height 1.35
            font-size inherit

            .desc
                font-size var(--font-size-xms, 36px)
                line-height 1.2
                color var(--color-gray-3, #999)
                white-space pre-line

    &.inline.two-column
        width 555px

    &.inline.checked
        background-color lighten(#BD1A2D, 90%)
        color #BD1A2D

    &.inline.disabled
        background-color var(--color-gray-7, #f5f5f5)

        .check-box-item-text
            color var(--color-gray-3, #999)
            font-size inherit

        .check-box-item-icon
            background-image unset
