<view
    class="check-box-item {{value ? 'checked' : ''}} {{twoColumn ? 'two-column' : ''}} {{inFilter ? 'infilter' : ''}} {{disabled ? 'disabled' : ''}} {{inline ? 'inline' : ''}} gov-checkbox"
    style="{{currentItemSty}}"
    catch:tap="clkHdl"
>
    <gov-icon
        s-if="showIcon"
        class="check-box-item-icon"
        name="{{iconStyl.name}}"
        color="{{iconStyl.color}}"
        size="{{iconStyl.size}}"
    />
    <view class="check-box-item-text">
        <slot></slot>
        <view class="desc"><slot name="desc"></slot></view>
    </view>
</view>
