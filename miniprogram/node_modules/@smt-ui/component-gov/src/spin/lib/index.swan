<view
    class="spin gov-spin-wrap
    {{isFullScreen && secureBottom) ? 'secure-bottom' : ''}}"
    hover-class="{{status === 0 || status === 3 ? 'spin-hover-feedback' : ''}}"
    hover-stay-time="200"
    bindtap="onTap"
>
    <view s-if="status === 1" class="text-wrap">
        <view class="gov-spin-loading">
            <slot name="loading"><image s-if="status === 1" class="spin-icon" src="{{imgSrc}}"/></slot>
        </view>
        <text class="text gov-spin-text">{{textConfig[status]}}</text>
    </view>
    <text s-else class="text gov-spin-text">{{textConfig[status]}}</text>
</view>