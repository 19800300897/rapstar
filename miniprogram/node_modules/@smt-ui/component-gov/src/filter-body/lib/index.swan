<view
    class="filter-mask gov-filter-mask {{filterIdx !== -1 ? 'show' : ''}}"
    data-cancel="true"
    bind:tap="cancelSelect"
    s-if="filtersValue.length"
>
    <view s-for="selItem, optionsIdx in selections"
        class="select-list gov-filter-select-list {{filterIdx === optionsIdx ? 'show' : ''}}"
        key="{{selItem.text}}"
        sel-item-slot="{{selItem.slot}}"
        catch:tap="noop"
    >
        <filter-cascade
            s-if="selItem.type === 'cascade'"
            class="filter-content gov-filter-content"
            key="{{selItem.value}}"
            options="{{selItem.options}}"
            option-key="{{selItem.optionKey || 'text'}}"
            value="{{filtersValue[optionsIdx].value}}"
            show="{{filterIdx === optionsIdx}}"
            active-color="{{activeColor}}"
            font-color="{{fontColor}}"
            bind:change="itemChange"
        ></filter-cascade>
        <filter-check-box-group
            s-elif="selItem.type === 'check-box-group'"
            key="{{selItem.value}}"
            options="{{selItem.options}}"
            value="{{filtersValue[optionsIdx].value}}"
            option-key="{{selItem.optionKey || 'text'}}"
            show="{{filterIdx === optionsIdx}}"
            column="{{selItem.column}}"
            bind:change="itemChange"
            class="filter-content gov-filter-content"
            active-color="{{activeColor}}"
            active-inline-bg-color="{{activeInlineBgColor}}"
        ></filter-check-box-group>
        <view class="filter-content gov-filter-content" s-elif="selItem.slot">
            <slot name="{{selItem.slot}}"></slot>
        </view>
        <filter-single-list
            s-else
            key="{{selItem.value}}"
            options="{{selItem.options}}"
            option-key="{{selItem.optionKey || 'text'}}"
            show="{{filterIdx === optionsIdx}}"
            value="{{filtersValue[optionsIdx].value}}"
            color-type="{{selItem.colorType}}"
            bind:change="itemChange"
            class="filter-content gov-filter-content"
            active-color="{{activeColor}}"
            font-color="{{fontColor}}"
        ></filtersingle-list>
    </view>
</view>





