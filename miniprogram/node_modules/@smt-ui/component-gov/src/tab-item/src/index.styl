@import "../../common/style/index"

.gov-tab-item
    display flex
    flex none
    height var(--tab-item-height, 147px)
    justify-content center
    align-items center
    position relative
    overflow hidden
    visibility hidden

    &.active
        font-weight 700
        color #000

    &.active::after
        content ""
        position absolute
        bottom 1px
        left 50%
        transform translate3d(-50%, 0, 0)
        height var(--tabs-indicator-height, 8px)
        width var(--tabs-indicator-width, 96px)
        border-radius var(--tabs-border-radius, 4px)
        background-color var(--color-gray-1, #333)

    &.show
        visibility visible