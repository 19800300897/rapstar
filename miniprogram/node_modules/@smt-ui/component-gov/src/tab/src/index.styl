@import "../../common/style/index"

.gov-tab
    border-bottom-retina(, , 0, 0)

    .tab-content
        display flex
        justify-content space-between
        color #666

        & > gov-tab-item
            display flex
            flex auto
            justify-content center
            align-items center

    .indicator
        position absolute
        bottom 0
        width var(--tabs-indicator-width, 96px)
        height var(--tabs-indicator-height, 8px)
        border-radius var(--tabs-border-radius, 4px)
        background-color var(--color-gray-1, #333)

