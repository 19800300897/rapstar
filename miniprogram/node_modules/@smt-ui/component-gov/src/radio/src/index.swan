<view
    class="
        radio-box-item
        gov-radio
        {{value ? 'checked' : ''}}
        {{twoColumn ? 'two-column' : ''}}
        {{inFilter ? 'in-filter' : ''}}
        {{disabled ? 'disabled' : ''}}
        {{inline ? 'inline' : ''}}
        {{tick ? 'tick' : ''}}
        {{border ? !isIos ? 'border android-patch' : 'border' : ''}}
    "
    bindtap="clkHdl"
    style="{{itemStyle}}"
>
    <slot name="icon-before">
        <gov-icon
            class="radio-infilter"
            s-if="{{!tick}}"
            name="{{iconsty.name}}"
            color="{{iconsty.color}}"
            size="{{inFilter ? iconSizeFilter : iconSize}}"
        />
    </slot>
    <view
        class="radio-box-item-text"
        style="{{textStyle}}"
    >
        <slot></slot>
        <slot name="desc">
            <view class="desc" s-if="{{desc}}">
                {{desc}}
            </view>
        </slot>
    </view>
    <slot name="icon-after">
        <gov-icon
            class="radio-infilter"
            s-if="{{tick}}"
            name="checkmark-o"
            color="{{activeColor}}"
            size="{{tickIconSize}}"
        />
    </slot>
</view>
