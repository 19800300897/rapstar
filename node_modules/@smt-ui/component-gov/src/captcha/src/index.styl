@import "../../common/style/index"

.input-item-wrap
    font-size var(--font-size-md, 54px)
    height 175px
    line-height 175px
    background var(--color-white, #fff)
    margin 0 auto

.input-item-title-short
    color var(--color-gray-2, #666)
    width 215px
    height 175px
    margin-right 60px
    float left
    overflow hidden

.ipt-area
.ipt-content
    height 175px
    width 100%
    align-items center
    display flex
    flex 1

.verify-icon
    display flex
    justify-content center
    align-items center
    flex-shrink 0
    width 300px
    height 126px
    border-retina()

.icon
    position absolute
    width 100%
    height 100%

.color-red
    color var(--color-red, #c40311)

.state-icon
    height 66px
    width 66px
    background-size contain
    background-repeat no-repeat
    &.loading
        background-image url('../images/loading.png')
        loop()
    &.reload
        background-image url(../images/reload.png)
