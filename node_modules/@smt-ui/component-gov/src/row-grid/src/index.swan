<view class="swan-grid {{hasLine ? 'swan-grid-hasline' : ''}}">
    <block s-for="item, index in list">
        <view class="grid-item gov-grid-item"
            style="width:{{100 / columnNum}}%;"
            data-index="{{index}}"
            bind:tap="onItemClick">
            <view class="inner-grid-item gov-inner-grid-item">
                <view class="{{columnNum > 2 ? 'inner-grid-items' : 'inner-grid-items widths'}}" hover-class="{{hasHover ? 'grid-item-hover' : ''}}">
                    <view class="wrap-image">
                        <gov-image-item
                            s-if="hasBorder"
                            image-width="{{imageWidth}}"
                            image-height="{{imageHeight}}"
                            border-radius="{{borderRadius}}"
                            image-src="{{item.icon}}">
                        </gov-image-item>
                        <image s-else
                            class="gov-image-class"
                            style="border-radius:{{borderRadius}}rpx; width:{{imageWidth}}rpx; height:{{imageHeight}}rpx"
                            src="{{item.icon}}"
                            mode="aspectFill">
                        </image>
                    </view>
                    <view class="title gov-title">
                        <text>{{item.title}}</text>
                    </view>
                </view>
                <view class="{{index != list.length - 1 ? 'grid-border-right' : ''}}"></view>
            </view>
            <view class="{{list.length > columnNum ? (index >= bottomIndex ? '' : 'grid-border-bottom') : '')}}"></view>
        </view>
    </block>
</view>