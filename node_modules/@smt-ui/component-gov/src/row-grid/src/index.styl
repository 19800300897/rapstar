.swan-grid 
    display flex
    flex-wrap wrap
    align-items center

    .grid-item 
        display flex
        flex-direction column
        align-items center
        box-sizing border-box
        justify-content center
        overflow hidden
        padding var(--font-size-xs, 42px) 0
        position relative

        .inner-grid-item 
            width 100%
            position relative
            display flex
            align-items center
            box-sizing border-box
            justify-content center
            box-sizing border-box
            padding 0 var(--h-spacing-md, 51px)

            .widths
                width 100%

            .inner-grid-items
                position relative
                display flex
                align-items center
                box-sizing border-box
                justify-content center
                box-sizing border-box
                padding 0 var(--h-spacing-md, 51px)

                .wrap-image 
                    display flex
                    justify-content center
                    align-items center

                .title 
                    max-width 200px
                    display inline-block
                    font-size var(--font-size-sm, 48px)
                    height var(--font-size-sm, 48px)
                    line-height var(--font-size-sm, 48px)
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-align left
                    color var(--color-gray-2, #666)
                    padding-left 30px

.grid-item-hover 
    opacity .5

.swan-grid-hasline
    .grid-border-right 
        width 0
        height 100%
        border-right 1px solid var(--color-gray-6, #eee)
        position absolute
        right 0
        top 0
    .grid-border-bottom 
        height 0
        width 100%
        border-bottom 1px solid var(--color-gray-6, #eee)
        position absolute
        left 0
        bottom 0


