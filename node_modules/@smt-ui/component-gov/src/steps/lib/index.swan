<view class="w-steps gov-steps w-steps-{{direction}}">
	<view
	  s-if="steps.length < 5"
	  class="w-steps-flex gov-steps-flex">
		<view
		  class="w-step is-flex gov-step"
		  s-for="item, index in steps"
		  id="id_{{index}}">
			<view class="w-step-head gov-step-head">
				<view class="w-step-icon" s-if="{{item.icon && item.activeIcon}}">
					<gov-icon s-if="{{active >= index + 1}}" name="{{item.activeIcon}}" size="36.232rpx" color="{{item.iconActiveColor ? item.iconActiveColor : colorBlue}}"></gov-icon>
                    <gov-icon s-else name="{{item.icon}}" size="36.232rpx" color="{{item.iconColor ? item.iconColor : '#ccc'}}"></gov-icon>
				</view>
				<gov-icon name="{{index > 8 ? '' : ('step-' + stepName[index])}}" size="36.232rpx" color="{{active >= index + 1 ? activeColor : color}}" class="gov-icon"></gov-icon>
				<view class="w-step-line" style="border-top-color: {{active >= index + 2 ? lineActiveColor : lineColor}}; border-top-style: {{active >= index + 2 ? lineActiveStyle : lineStyle}}; border-top-width: {{lineWidth}}rpx; top: {{18.1 - lineWidth/2}}rpx"></view>
			</view>
			<view class="w-step-main gov-step-main">
				<view class="w-step-title {{steps.length === 2 ? 'twoSteps' : steps.length === 3 ? 'threeSteps' : steps.length === 4 ? 'fourSteps' : ''}}" style="color: {{active >= index + 1 ? titleActiveColor : titleColor}}">
					{{item.text}}
				</view>
				<view s-if="{{item.desc}}" class="w-step-desc" style="color: {{active >= index + 1 ? descActiveColor : descColor}}">
                    <text>
					{{item.desc}}
                    </text>
				</view>
			</view>
		</view>
	</view>
	<scroll-view
	  s-else
	  scroll-x
	  scroll-into-view="{= scrollIntoView =}"
	  class="w-steps-block gov-steps-block">
		<view
		  class="w-step is-block gov-step"
		  style="width: {{space}}rpx;"
		  s-for="item, index in steps"
		  id="id_{{index}}">
			<view class="w-step-head gov-step-head">
				<view class="w-step-icon" s-if="{{item.icon && item.activeIcon}}">
					<gov-icon s-if="{{active >= index + 1}}" name="{{item.activeIcon}}" size="36.232rpx" color="{{item.iconActiveColor ? item.iconActiveColor : colorBlue}}"></gov-icon>
                    <gov-icon s-else name="{{item.icon}}" size="36.232rpx" color="{{item.iconColor ? item.iconColor :'#ccc'}}"></gov-icon>
				</view>
				<gov-icon name="{{index > 8 ? '' : ('step-' + stepName[index])}}" size="36.232rpx" color="{{active >= index + 1 ? activeColor : color}}" class="gov-icon"></gov-icon>
				<view class="w-step-line" style="border-top-color: {{active >= index + 2 ? lineActiveColor : lineColor}}; border-top-style: {{active >= index + 2 ? lineActiveStyle : lineStyle}}; border-top-width: {{lineWidth}}rpx; top: {{18.1 - lineWidth/2}}rpx"></view>
			</view>
			<view class="w-step-main gov-step-main">
				<view class="w-step-title  moreSteps" style="color: {{active >= index + 1 ? titleActiveColor : titleColor}}">
					{{item.text}}
				</view>
				<view s-if="{{item.desc}}" class="w-step-desc" style="color: {{active >= index + 1 ? descActiveColor : descColor}}">
                    <text>
					{{item.desc}}
                    </text>
				</view>
			</view>
		</view>
	</scroll-view>
</view>