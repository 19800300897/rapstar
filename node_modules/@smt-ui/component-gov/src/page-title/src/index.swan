<view class="title-wrap gov-title-wrap {{size}}-title {{isTurn ? 'turn-wrap' : ''}}" bindtap="clickFn">
    <view class="{{isTurn ? 'turn-content' : ''}}">
        <view class="title gov-title {{size}}">
            <text selectable="true">{{title}}</text>
        </view>
        <view class="desc gov-desc {{size}}-desc" s-if="desc">
            <text selectable="true">{{desc}}</text>
        </view>
        <view s-if="isTurn" class="turn">
            <view class="turn-title gov-turn-title" s-if="turnDesc">
                <text selectable="true">{{turnDesc}}</text>
            </view>
            <gov-icon
                class="arrow-icon"
                name="{{iconName}}"
                color="{{iconColor}}"
                size="{{iconSize}}">
            </gov-icon>
        </view>
    </view>
</view>
 <view class='border' s-if="hasBorder">
    <view class="custom-border {{isIos ? 'ios-border' : ''}}"></view>
</view>
