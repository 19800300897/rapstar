.swan-grid 
    display flex
    flex-wrap wrap
    align-items center

    .grid-item 
        display flex
        flex-direction column
        align-items center
        box-sizing border-box
        justify-content center
        overflow hidden
        // padding var(--v-spacing-md, 60px) 0
        padding 54px 0
        position relative

        .inner-grid-item 
            width 100%
            position relative

            .text-info 
                text-align center
                padding 0 12px

                .title 
                    font-size var(--font-size-lg, 66px)
                    height 73px
                    line-height 76px
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-align center
                    padding 0 var(--h-spacing-md, 51px)
                    font-weight 700

                .desc 
                    display inline-block
                    width 100%
                    font-size var(--v-spacing-sm, 42px)
                    height var(--v-spacing-sm, 42px)
                    line-height 43px
                    color var(--color-gray-3, #999)
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-align center
                    box-sizing border-box
                    padding 0 var(--h-spacing-md, 51px)
            
            .title-on-top 
                .desc 
                    margin-top 22px

            .desc-on-top 
                .title 
                    margin-top 11px
                    
    .grid-item-hover 
        opacity .5

.swan-grid-hasline
    .grid-border-right 
        width 0
        height 100%
        border-right 1px solid var(--color-gray-6, #eee)
        position absolute
        right 0
        top 0
    .grid-border-bottom 
        height 0
        width 100%
        border-bottom 1px solid var(--color-gray-6, #eee)
        position absolute
        left 0
        bottom 0

.wrap-image 
    display flex
    justify-content center
    align-items center


