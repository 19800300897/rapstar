@import "../../common/style/index"
@import "../../common/style/radioInFilter"

.radio-box-item
    display flex
    align-items center
    padding 45px 0
    color var(--color-black, #000)

    &.border
        border-bottom-retina(, , 0, 0)

    &-text
        font-size var(--font-size-md, 54px)
        line-height 1.33
        padding-left 21px
        vertical-align middle

        .desc
            margin-top 15px
            font-size var(--font-size-sm, 48px)
            line-height 1.4375
            color var(--color-gray-2, #666)
            white-space pre-line

    &.tick
        padding 36px 0

        .radio-box-item-text
            padding-left 0
            color var(--color-gray-2, #666)
            flex auto

        .radio-box-item-icon
            width 99px
            height 99px
            background unset
            flex-shrink 0
            align-content flex-end
            vertical-align middle


    &.tick.disabled
        .radio-box-item-text
            color var(--color-gray-4, #ccc)

    &.inline
        position relative
        display flex
        justify-content center
        align-items center
        min-height 144px
        width 414px
        padding 15px 51px
        box-sizing border-box
        font-size var(--font-size-md, 54px)
        color var(--color-gray-1, #333)

    &.inline.two-column
        width 570px

    &.inline.disabled
        .check-box-item-text
            color var(--color-gray-3, #999)

