{
    "name": "gov-radio",
    "label": "单选框",
    "description": "单选框",
    "codeSnap": "<gov-radio value=\"{{true}}\"></gov-radio>",
    "groups": "layout",
    "demoCode": {
        "s": "<view class=\"wrap\">\n    <view class=\"line\">单选框 radio</view>\n    <gov-radio value=\"{{checked2}}\" bindclick=\"clkhdl2\">可选</gov-radio>\n    <gov-radio disabled>不可选</gov-radio>\n</view>",
        "css": ".wrap {\n    padding: 0 30.797rpx;\n}\n\n.line {\n    margin-top: 18.116rpx;\n    font-size: 32.61rpx;\n    color: #000;\n    padding-bottom: 12.077rpx;\n    border-bottom: 1px solid #f5f5f5;\n}",
        "js": "Page({\n    data: {\n        checked: false,\n        checked2: false\n    },\n    clkhdl() {\n        this.setData({\n            checked: !this.data.checked\n        });\n    },\n    clkhdl2() {\n        this.setData({\n            checked2: !this.data.checked2\n        });\n    }\n});\n"
    },
    "fragement": "",
    "properties": {
        "attributes": [
            {
                "name": "value",
                "type": "Boolean",
                "description": "是否选中",
                "required": "否",
                "default": false
            },
            {
                "name": "disabled",
                "type": "Boolean",
                "description": "是否禁用",
                "required": "否",
                "default": false
            },
            {
                "name": "border",
                "type": "Boolean",
                "description": "是否带有下边线",
                "required": "否",
                "default": "true"
            },
            {
                "name": "itemStyle",
                "type": "String",
                "description": "行内样式",
                "required": "否",
                "default": ""
            },
            {
                "name": "desc",
                "type": "String",
                "description": "label 文本",
                "required": "否",
                "default": ""
            },
            {
                "name": "textStyle",
                "type": "String",
                "description": "文本样式",
                "required": "否",
                "default": ""
            },
            {
                "name": "activeColor",
                "type": "String",
                "description": "单选项选中时的icon颜色",
                "required": "否",
                "default": "#BD1A2D"
            },
            {
                "name": "activeBgColor",
                "type": "String",
                "description": "在inline-filter 模式下选中时的背景颜色",
                "required": "否",
                "default": "#FBE5E8"
            }
        ],
        "events": [
            {
                "name": "click",
                "type": "Event",
                "description": "选中事件，返回当前单选框选中",
                "required": "否",
                "default": "-"
            },
            {
                "name": "change",
                "type": "Event",
                "description": "选中事件，返回当前单选框状态",
                "required": "否",
                "default": "-"
            }
        ],
        "externalClasses": [
            {
                "name": "gov-radio",
                "type": "",
                "description": "单选框的扩展样式类，可通过此class改变单选框的样式",
                "required": "否",
                "default": "-"
            }
        ]
    }
}
