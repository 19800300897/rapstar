@import "../../common/style/index"

.picker
    padding 48px var(--h-spacing-md, 51px)
    display flex

    .label
        font-size var(--font-size-md, 54px)
        color var(--color-gray-2, #666)
        word-break break-all
        line-height 80px

    .picker-content
        flex 1
        display flex
        justify-content space-between
        padding-left 60px

        .date-value
            width 700px
            font-size var(--font-size-md, 54px)
            white-space nowrap
            overflow hidden
            text-overflow ellipsis

            &.placeholder
                color var(--color-gray-4, #ccc)

        .arrow-icon
            display flex
            align-items center

.border
    border-bottom-retina(, , 51px, 51px)