@import "../../common/style/index"

.picker
    padding 0 var(--h-spacing-md, 51px)
    display flex

    .label-box
        font-size var(--font-size-md, 54px)
        color var(--color-gray-2, #666)
        padding-top 46px
        line-height 80px
        display flex
        word-break break-all
        padding-right 60px

    .box
        display flex
        flex 1
        flex-direction column

        .border
            border-bottom-retina(, , 0, 0)

        .picker-content

            .picker-flex
                display flex
                align-items center
                justify-content space-between
                height 174px

            .date-value
                font-size var(--font-size-md, 54px)
                vertical-align center

                &.placeholder
                    color var(--color-gray-4, #ccc)

.border
    border-bottom-retina(, , 51px, 51px)
