@import "../../common/style/index"

.navigation
    position relative

    .fixed
        position fixed
        z-index 999
        display flex
        justify-content center
        align-items center
        top 0
        left 0
        right 0
        background-color #fff

        &.border
            border-bottom-retina(#e6e6e6, , , , #e6e6e6, fixed)

        .back-icon
            position absolute
            z-index 1
            height inherit
            display flex
            left 36px
            width 86px
            justify-content center
            align-items center
            btn-hover-feedback()

            &::after
                content ""
                height 66px
                width 66px
                background url(../../common/imgs/ios-back-black.png) no-repeat center/contain

        .title
            font-size 54px
            line-height 1.2
            font-weight 500 // 8p 为准
            max-width 580px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap

    &.android-patch
        .back-icon::after
            background-image url(../../common/imgs/android-back-black.png)

    &.home-icon
        .back-icon::after
            background-image url(../../common/imgs/ios-back-home-black.png)

        .android-patch
            .back-icon::after
                background-image url(../../common/imgs/android-back-home-black.png)