// check-box-group 筛选样式覆盖
.check-box-group
    .check-box-group-wrap
        &.inline.in-filter
            .row
                &.not-first
                    margin-top 24px

                .check-box
                    margin-right 24px

// check-box-item 筛选样式覆盖
.check-box-item
    &.inline.in-filter
        height 147px
        min-height 147px
        width 364px
        font-size 42px
        color #666

        .check-box-item-icon
            width 50px
            height 50px

    &.inline.in-filter.two-column
        width 558px

