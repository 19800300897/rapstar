<view class="publish">
    <slot name="title"></slot>
    <gov-textarea
        placeholder="{{placeholder}}"
        maxlength="{{maxlength}}"
        value="{{value}}"
        showTip="{{showTip}}"
        gov-textarea-element="textarea-element"
        cursorSpacing="{{cursorSpacing}}"
        adjustPosition="{{adjustPosition}}"
        showConfirmBar="{{showConfirmBar}}"
        bind:blur="blur"
        bind:input="input"
    ></gov-textarea>
    <gov-upload
        count="{{count}}"
        bind:uploadsuccess="uploadsuccess"
        bind:delete="clickDelete"
        bind:limitsizeerr="limitsizeerr"
        bind:chooserr="chooserr"
        bind:urlempty="urlempty"
        bind:reserror="reserror"
        bind:uploadfail="uploadfail"
        bind:previewsuccess="previewsuccess"
        bind:previewfail="previewfail"
        limitSize="{{limitSize}}"
        border="{{border}}"
        tips="{{tips}}"
        name="{{name}}"
        imageList="{{imageList}}"
        sizeType="{{sizeType}}"
        sourceType="{{sourceType}}"
        imgMode="{{imgMode}}"
        inline="{{inline}}"
        header="{{header}}"
        formData="{{formData}}"
        showSizeToast="{{showSizeToast}}"
    />
    <slot name="content"></slot>
    <slot name="radio"></slot>
    <view
        class="
            {{hasButtonTop ? 'button button-compitable': 'button'}}
            {{isFullScreen ? 'iphone-x-compitable' : ''}}
        "
        @bind:tap="clickBtn"
    >
        <gov-button
            button-size="large"
            button-color="{{bottoncolor}}"
            button-text="{{botton}}"
            button-disabled="{{buttonDisabled}}">
        </gov-button>
    </view>
</view>