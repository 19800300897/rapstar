<view class="result">
    <view class="result-top" style="{{contentStyle}}">
        <img class="img" src="{{imageUrl}}" s-if="{{imageUrl}}">
        <gov-icon s-if="{{showIcon}}" name="{{iconName}}" size="{{iconSize}}" color="{{iconColor}}"></gov-icon>
        <view class="cont-title">{{title}}</view>
        <view class="cont-desc" s-if="{{desc}}">{{desc}}</view>
        <!-- 补充内容 -->
        <view class="suppl-cont" style="width: {{customConWidth}}">
            <slot name="suppl-cont"></slot>
        </view>
    </view>
    <view class="result-bottom gov-bottom">
        <!-- 主按钮 -->
        <gov-button
            gov-button="main-btn gov-main-btn"
            button-size="large"
            button-text="{{mainBtnText}}"
            s-if="{{mainBtnText}}"
            bind:tap="goBack"
        ></gov-button>
        <!-- 副按钮 -->
        <gov-button
            gov-button="sub-btn gov-sub-btn"
            button-size="large"
            button-text="{{subBtnText}}"
            button-color="plain"
            s-if="{{subBtnText}}"
            bind:tap="viewDetails"
        ></gov-button>
        <!-- 其它 -->
        <slot name="bottom-btn"></slot>
        <!-- 提示 -->
        <view class="ext-info" s-if="{{tips}}">
            <view class="ext-info-text gov-ext-info-text">{{tips}}</view>
        </view>
    </view>
</view>
