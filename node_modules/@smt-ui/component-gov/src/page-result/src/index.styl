@import "../../common/style/index"

.result
    position relative
    min-height 100vh

    .result-top
        padding-top 384px
        display flex
        flex-direction column
        justify-content center
        align-items center

        .img
            width 192px
            height 192px
            display inline-block

        .cont-title
            margin-top 58px
            width 792px
            text-align center
            font-size var(--font-size-lg, 66px)

        .cont-desc
            width 855px
            font-size var(--font-size-sm, 48px)
            color var(--color-gray-3, #999)
            line-height 1.7
            text-align center
            margin 4px auto

        .suppl-cont
            color #999
            width 762px
            text-align center
            line-height 74px

    .result-bottom
        position absolute
        width 100%
        box-sizing border-box
        top 1180px
        padding 0 var(--h-spacing-md, 51px)

        .main-btn
            background var(--color-red, #c40311)

        .sub-btn
            margin-top 30px

        .ext-info
            height 372px
            color var(--color-gray-3, #999)
            box-sizing border-box
            padding 72px 0

            .ext-info-text
                padding 38.4px 42px
                background var(--color-gray-7, #f5f5f5)
                line-height 1.8
                border-radius var(--border-radius-md, 30px)
                opacity 0.8
                font-size var(--font-size-xs, 42px)