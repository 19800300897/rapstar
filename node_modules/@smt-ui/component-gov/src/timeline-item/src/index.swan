<view class="timeline-item {{timeHasTail ? '' : 'item-notail'}}">
    <view class="item-tail gov-item-tail"></view>
    <view class="item-head">
        <view class="item-head-icon item-head-{{timeStatus}}">
            <gov-icon
                name="{{timeIcon}}"
                size="{{40}}"
                color="{{timeIconColor}}">
            </gov-icon>
        </view>
    </view>
    <view class="item-content gov-content">
        <view class="item-content-desc item-content-desc-{{timeStatus}}" style="{{descStyle}}">
            <rich-text class="desc-class" nodes="{{desc}}"></rich-text>
        </view>
        <view class="item-content-slot gov-content-slot">
            <slot></slot>
        </view>
        <view class="item-content-title gov-content-title">{{title}}</view>
    </view>
</view>