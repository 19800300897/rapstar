@import "../../common/style/index"

.bottom
    border-bottom var(--bottom-border-height, 30px) solid var(--color-gray-7, #f5f5f5)

.upload
    height 100%
    display flex
    flex-wrap wrap
    padding 0 var(--h-spacing-md, 51px)

    .upload-box
        width 366px
        height 366px
        border-radius 15px
        margin 14px 13px 0 0
        display flex
        justify-content center
        align-items center
        position relative

        .delete
            width 60px
            height 60px
            color var(--color-white, #fff)
            font-size var(--font-size-xs, 42px)
            background var(--color-black, #000)
            opacity .5
            display flex
            z-index 1
            justify-content center
            align-items center
            position absolute
            top 0
            right 0
            border-radius 0 15px 0 15px

        .img
            width 100%
            height 100%
            display block
            border-radius 15px

    .add-box
        border 1px solid var(--color-gray-5, #e6e6e6)

.tips
    padding 36px var(--h-spacing-md, 51px)
    font-size 48px
    color #999

.upload-inline
    height 100%
    display flex
    flex-wrap wrap
    padding 0 var(--h-spacing-md, 51px)

    .upload-inline-box
        width 100%
        height 460px
        border-radius 15px
        background #fafafa
        margin 10px 10px 0 0
        display flex
        flex-direction column
        justify-content center
        align-items center
        position relative

        .upload-word
            font-size var(--font-size-sm, 48px)
            color #ccc

        .delete
            width 60px
            height 60px
            color var(--color-white, #fff)
            font-size var(--font-size-xs, 42px)
            background var(--color-black, #000)
            opacity .5
            display flex
            z-index 1
            justify-content center
            align-items center
            position absolute
            top 0
            right 0
            border-radius 0 15px 0 15px

        .img
            width 100%
            height 100%
            display block
            border-radius 15px

