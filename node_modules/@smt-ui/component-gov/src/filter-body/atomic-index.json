{
    "name": "gov-filter-body",
    "label": "筛选器展开面板",
    "description": "筛选器展开面板",
    "codeSnap": "<gov-filter-header key=\"0\" selections=\"{{[{text: '筛选项目1'}, {text: '筛选项目2'}, {text: '筛选项目3'}]}}\" border filter-id=\"1\"/>",
    "groups": "layout",
    "demoCode": {
        "s": "<gov-filter-header key=\"0\" selections=\"{{[{text: '筛选项目1'}, {text: '筛选项目2'}, {text: '筛选项目3'}]}}\" border filter-id=\"1\"/>"
    },
    "fragement": "",
    "properties": {
        "attributes": [
            {
                "name": "filterId",
                "type": "String",
                "description": "筛选器ID",
                "required": "是",
                "default": ""
            },
            {
                "name": "selections",
                "type": "String",
                "description": "筛选项数组，数组格式[{text:'名称', value: '值，string/Array.<string>', options: [{text: '', value: ''}, {text: '', value: ''}]}]",
                "required": "是",
                "default": "[]"
            },
            {
                "name": "expand",
                "type": "Boolean, Number",
                "description": "是否默认展开某项，如果传如对应筛选项的索引，则展开该项。false则全部关闭",
                "required": "否",
                "default": "false"
            },
            {
                "name": "border",
                "type": "Boolean",
                "description": "是否带有下边线",
                "required": "否",
                "default": "true"
            },
            {
                "name": "inSearch",
                "type": "Boolean",
                "description": "筛选器所在页面顶部是否带有搜索框，有的话不带边线",
                "required": "否",
                "default": "false"
            },
            {
                "name": "fontColor",
                "type": "String",
                "description": "默认状态下的筛选项文字颜色",
                "required": "否",
                "default": "#000"
            },
            {
                "name": "iconColor",
                "type": "String",
                "description": "默认状态下的icon颜色",
                "required": "否",
                "default": "#000"
            },
            {
                "name": "activeColor",
                "type": "String",
                "description": "筛选器展开以及筛选项选中式的文字和icon颜色",
                "required": "否",
                "default": "#BD1A2D"
            },
            {
                "name": "activeInlineBgColor",
                "type": "String",
                "description": "筛选器复选类型在inline 模式下选中时的背景颜色",
                "required": "否",
                "default": "#FBE5E8"
            },
            {
                "name": "disColor",
                "type": "String",
                "description": "设置筛选项为不允许高亮时的文字和icon颜色",
                "required": "否",
                "default": "#666"
            },

            {
                "name": "selectable",
                "type": "Boolean",
                "description": "内容可复制",
                "required": "否",
                "default": "是"
            },
            {
                "name": "label",
                "type": "String",
                "description": "左侧文字",
                "required": "否",
                "default": ""
            },
            {
                "name": "labelWidth",
                "type": "String",
                "description": "左侧文字宽度，须包含单位，例如em、px、rpx、vw、vh...",
                "required": "否",
                "default": "4em"
            },
            {
                "name": "labelDesc",
                "type": "String",
                "description": "左侧文字描述",
                "required": "否",
                "default": ""
            },
            {
                "name": "contentDesc",
                "type": "String",
                "description": "右侧文字描述",
                "required": "否",
                "default": ""
            },
            {
                "name": "arrow",
                "type": "Boolean",
                "description": "右箭头",
                "required": "否",
                "default": ""
            },
            {
                "name": "border",
                "type": "Boolean",
                "description": "底边线",
                "required": "否",
                "default": ""
            }
        ],
        "events": [
            {
                "name": "expand",
                "type": "Event",
                "description": "筛选器展开和关闭时触发",
                "required": "否",
                "default": "返回展开状态以及上次和当前选中项的索引值"
            },
            {
                "name": "select",
                "type": "Event",
                "description": "选中某一筛选项时触发",
                "required": "否",
                "default": "将选中项在selections数据里对应的值返回"
            }
        ],
        "externalClasses": [
            {
                "name": "gov-filter-header-wrapper",
                "type": "",
                "description": "筛选器头部整个容器的扩展样式类",
                "required": "否",
                "default": "-"
            },
            {
                "name": "gov-filter-header",
                "type": "",
                "description": "筛选器头部第一层子容器的扩展样式类",
                "required": "否",
                "default": "-"
            },
            {
                "name": "gov-filter-expand",
                "type": "",
                "description": "筛选器为展开状态时，筛选项标题的扩展样式类",
                "required": "否",
                "default": "-"
            },
            {
                "name": "gov-filter-selected",
                "type": "",
                "description": "筛选项标题为选中状态时的扩展样式类",
                "required": "否",
                "default": "-"
            },
            {
                "name": "gov-filter-btn-text",
                "type": "",
                "description": "筛选项标题文字的扩展样式类",
                "required": "否",
                "default": "-"
            },
            {
                "name": "gov-filter-arrow",
                "type": "",
                "description": "筛选项标题旁侧的icon的扩展样式类",
                "required": "否",
                "default": "-"
            }
        ]
    }
}

