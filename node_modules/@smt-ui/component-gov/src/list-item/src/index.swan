<view class="
        list-item
        gov-list-item
        {{isIos ? '' : 'android-patch'}}
        {{border ? 'border' : ''}}
        {{clickable ? 'clickable' : ''}}
    "
    hover-class="{{clickable ? 'list-hover-feedback gov-hover-class' : ''}}"
    hover-stay-time="{{240}}"
>
    <slot name="left"></slot>
    <slot name="label">
        <view class="label-wrap"
            style="
                width: {{labelWidth}}
            "
        >
            <view s-if="label" class="label-text gov-label {{labelDesc ? 'has-desc' : ''}}">{{label}}</view>
            <view s-if="labelDesc" class="label-desc gov-label-desc">{{labelDesc}}</view>
        </view>
    </slot>
    <slot name="content">
        <view class="content-wrap">
            <text s-if="content" class="content-text gov-content {{contentDesc ? 'has-desc' : ''}}">
                {{content}}
            </text>
            <view s-if="contentDesc" class="content-desc gov-content-desc">{{contentDesc}}</view>
        </view>
    </slot>
    <gov-icon
        s-if="{{arrow}}"
        class="arrow-icon"
        name="arrow-right-o"
        color="#ccc"
        size="32.609rpx"
    ></gov-icon>
    <slot name="right"></slot>
</view>