@import "../../common/style/index"

.list-item
    display flex
    justify-content space-between
    align-items flex-start
    padding 0 51px
    font-size 54px

    &.border
        border-bottom-retina(, , 51px, 51px)

    &.clickable
        list-hover-feedback()

    .label,
    .content
        display flex
        align-items center

        &-wrap
            display flex
            flex-flow column nowrap
            justify-content center

        &-text
            line-height 1.44
            color #666
            padding 48px 0

        &-text.has-desc
            padding-bottom 9px
            color #000

    .label-desc
        display flex
        align-items center
        color #999
        font-size 42px
        line-height 1.429
        padding-bottom 41px

    .content-desc
        line-height 1.444
        color #999
        font-size 42px
        display flex
        justify-content flex-end
        padding 92px 0

    .label-wrap
        flex none

    .content-wrap
        flex auto
        display flex
        padding-left 60px
        justify-content flex-end

        .content-text
            font-size var(--font-size-md, 54px)
            text-align right
            color #000

    .arrow-icon
        display flex
        align-self center

