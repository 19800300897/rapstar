@import "../../common/style/index"
@import "../../common/style/inFilter"

.check-box-group
    display flex
    flex auto
    flex-flow row wrap

    .check-box-group-wrap
        display flex
        flex auto
        flex-flow column nowrap

        .check-box
            &.border
                border-bottom-retina(, , 0, 0)

            .desc
                margin-top 15px

        &.inline
            flex-flow row wrap
            justify-content flex-start

            .row
                display flex
                flex auto
                justify-content flex-start

                &.not-first
                    margin-top 24px

                &.first-line
                    margin-top 0 !important

                .check-box
                    display flex
                    no-border()
                    margin-right 24px

                    &.last
                        margin-right 0

                    .desc
                        margin-top 0
