<view class="
        list
        gov-list
        {{topBorder ? 'top-border' : ''}}
        {{bottomBorder ? 'bottom-border' : ''}}
    "
>
    <slot name="header">
        <view class="
                header
                gov-header
                {{headerBorder ? 'header-border' : ''}}
                {{isIos ? '' : 'android-patch'}}
            "
            hover-class="{{headerClickable ? 'list-hover-feedback header-hover-class' : ''}}"
            hover-stay-time="{{240}}"
        >
            <slot name="left"></slot>
            <slot name="title">
                <view class="title gov-title" s-if="title">{{title}}</view>
            </slot>
            <slot name="sub-title">
                <view class="sub-title gov-sub-title" s-if="subTitle">{{subTitle}}</view>
            </slot>
            <gov-icon
                s-if="{{arrow}}"
                class="arrow-icon"
                name="arrow-right-o"
                color="#999"
                size="32.609rpx"
            ></gov-icon>
            <slot name="right"></slot>
        </view>
    </slot>
    <view class="content">
        <slot></slot>
    </view>
</view>