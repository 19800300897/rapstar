@import "../../common/style/index"

.list
    display flex
    flex-direction column

    &.top-border
        border-top solid var(--top-border-height, 30px) var(--top-border-color, #f5f5f5)

    &.bottom-border
        border-bottom solid var(--bottom-border-height, 30px) var(--bottom-border-color, #f5f5f5)

    .header
        display flex
        padding 0 var(--h-spacing-md, 51px)
        list-hover-feedback()

        &-border
            border-bottom-retina(, , 51px, 51px)

        .title
            display flex
            align-items center
            flex auto
            font-size 54px
            line-height 1.48
            margin 48px 0

        .sub-title
            display flex
            align-items center
            flex none
            padding-left 60px
            font-size 42px
            line-height 1.2
            color var(--color-gray-3, #999)

        .arrow-icon
            display flex
            justify-content center
            align-items center

