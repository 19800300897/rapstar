* 
    box-sizing border-box

.baidu-switch 
    display inline-flex
    align-items center
    width 114px
    height 69px
    line-height 69px
    border-radius var(--v-spacing-xl, 120px)
    vertical-align middle
    border 1px solid #bfbfbf
    background-color #ededed
    position relative
    cursor pointer
    user-select none
    transition background-color .2s ease-in-out, border-color .2s ease-in-out

    .after 
        content ""
        width var(--font-size-md, 54px)
        height var(--font-size-md, 54px)
        box-sizing border-box
        border-radius var(--font-size-md, 54px)
        border 1px solid transparent
        background-color var(--color-white, #fff)
        position absolute
        left 8px
        cursor pointer
        transition left .2s ease-in-out, width .2s ease-in-out

    &:active 
        .after 
            width var(--font-size-lg, 66px)

    .before 
        content ""
        display none
        width var(--font-size-sm, 48px)
        height var(--font-size-sm, 48px)
        border-radius 50%
        box-sizing border-box
        background-color transparent
        position absolute
        left 12px
        z-index 1
        border 1px solid #2d8cf0
        border-color transparent transparent transparent #2d8cf0
        animation switch-loading 1s linear
        animation-iteration-count infinite

    &:focus 
        box-shadow 0 0 0 2px rgba(45, 140, 240, 0.2)
        outline 0

        &:hover 
            box-shadow none

.baidu-switch-loading 
    opacity .4

    .before 
        display block

.baidu-switch-inner 
    color var(--color-white, #fff)
    font-size 20px
    position absolute
    right 8px

.baidu-switch-checked 
    border-color #38f
    background-color #38f

    .baidu-switch-inner 
        left 8px

    .after 
        left 50px

    .before 
        left var(--font-size-md, 54px)

    &:active 
        .after 
            left 40px

.baidu-switch-disabled 
    cursor not-allowed
    opacity .4
    
    .after 
        background var(--color-white, #fff)
        cursor not-allowed

    .baidu-switch-inner 
        color var(--color-white, #fff)

    &.baidu-switch-checked 
        border-color #2d8cf0
        background-color #2d8cf0
        opacity .4

        .after 
            background var(--color-white, #fff)

        .baidu-switch-inner 
            color var(--color-white, #fff)

@keyframes switch-loading {
    0% {
      transform rotate(0)
    }
    100% {
      transform rotate(360deg)
    }
}
  