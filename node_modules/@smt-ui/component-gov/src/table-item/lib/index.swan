<view>
    <view class="content-item gov-content-item">
        <view class="table-item-title gov-table-item-title">
            {{main.title.content}}
            <view s-if="{{main.title.show}}" data-item="{{main.title}}" bindtap="tipsTap">
                <gov-icon
                    class="gov-icon"
                    name="message-o"
                    color="#2b99ff"
                    size="16px">
                </gov-icon>
            </view>
        </view>
        <view class="table-item-desc gov-table-item-desc" s-for="desc in main.desc">
            {{desc.content}}
        </view>
    </view>
    <view s-if="{{bottomBorder}}" class="content-item-line gov-content-item-line"></view>
</view>