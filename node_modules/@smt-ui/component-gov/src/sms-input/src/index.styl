.input-item-wrap
	font-size var(--font-size-md, 54px)
	background var(--color-white, #fff)
	margin 0 var(--h-spacing-md, 51px)
	overflow hidden
	border-bottom 1px solid var(--bottom-border-color, #f5f5f5)

	.content-wrap
		padding 48px 0
		display flex
		justify-content center

		.input-title
			color var(--color-gray-2, #666)
			margin 0 60px 0 0
			word-break break-all
			line-height 1.48

		.ipt-area
			flex 1
			margin-top 5px

		.get-msg-code
			color #2b99ff
			margin-left 51px
			display flex
			justify-content center

		.msg-calm-dowm 
			margin-left 51px
			color var(--color-gray-4, #ccc)