@import "../../common/style/index"

.input
    font-size var(--font-size-md, 54px)
    height 174px
    background var(--color-white, #fff)
    margin 0 auto
    padding 0 51px
    color var(--color-black, #000)

    &-content
        width 100%
        height 174px

    &-title-short
        color var(--color-gray-2, #666)
        height 174px
        width 224px
        line-height 174px
        margin 0 53px 0 0
        overflow hidden

    &-title-long
        color var(--color-gray-2, #666)
        width 331px
        height 174px
        line-height 174px
        margin 0 53px 0 0
        overflow hidden

    &-title-two-row
        color var(--color-gray-2, #666)
        width 331px
        height 251px
        line-height 81px
        margin 50px 53px 0 0

.form-item
    position relative

.two-row
    height 251px

.content-wrap
    position relative
    height 100%
    display flex
    overflow hidden

    &.border
        border-bottom-retina(, , 0, 0)

.ipt-area
    height 100%

.input-explain-icon
    width 157px
    display flex
    align-items center
    justify-content center
    height 100%
    position absolute
    top 0
    right 0

.ipt-placeholder
    color var(--color-gray-4, #ccc)
    font-size var(--font-size-md, 54px)

.color-red
    color var(--color-red-light, #c40311)

.clear-hide
    visibility hidden
    height 0
    padding 0
    margin 0