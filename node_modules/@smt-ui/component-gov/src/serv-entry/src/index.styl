@import "../../common/style/index"

.serv-entry
    height 100vh
    padding-top 30px
    box-sizing border-box
    position relative

    .serv-entry-img
        height 480px
        margin 0 var(--h-spacing-md, 51px)
        position relative
        background-repeat no-repeat
        background-position center
        background-size 100%
        color var(--color-white, #fff)
        line-height 1.2
        border-radius 30px
        margin-bottom 48px

        .title
            padding 43.4px 60px 0
            line-height 102px
            font-size var(--font-size-lg, 66px)
            font-weight 700

        .desc
            position absolute
            left 60px
            bottom 55.2px
            font-size var(--font-size-sm, 48px)
    .list

        .list-item
            display flex
            margin-top -1px
            height 174px
            margin 0 var(--h-spacing-md, 51px)
            align-items center
            justify-content space-between
            color var(--color-black, #000)
            font-size var(--font-size-md, 54px)
            border-bottom solid var(--gap-line, 1px) #eee

    .list:active
        background var(--color-gray-7, #f5f5f5)

    .tel
        display flex
        font-size var(--font-size-sm, 48px)
        margin 0 var(--h-spacing-md, 51px)
        color var(--color-gray-4, #ccc)
        line-height 1.2
        padding-top 60px

        .tel-number
            color var(--color-blue, #2b99ff)

        .tel-number:active
            opacity .5

    .yes-iphonex
        width 100%
        position absolute
        left 0
        bottom 125px

    .no-iphonex
        width 100%
        position absolute
        left 0
        bottom 35px
