<view
    class="
    btn-primary gov-button-group
    {{buttonPosition ? 'btn-' + buttonPosition : ''}}
    {{buttonPosition === 'bottom' ? (platform === 'ios' ? 'ios-border-top' : 'android-border-top') : ''}}
    {{buttonArrange ? 'btn-' + buttonArrange : ''}}">
    <gov-button
        s-for="item,index in buttonGroup"
        bind:click="buttonHandle"
        data-index="{{index}}"
        button-size="{{item.buttonSize}}"
        button-color="{{item.buttonColor}}"
        button-text="{{item.buttonText}}"
        button-disabled="{{item.buttonDisabled}}"
        button-icon="{{item.buttonIcon}}"
        defined-bg-color="{{item.definedBgColor}}"
        class="has-button-group">
    </gov-button>
 </view>