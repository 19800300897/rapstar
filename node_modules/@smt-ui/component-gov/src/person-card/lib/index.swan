<view
    class="person-card gov-person-card
    {{type === 'big' ? 'person-card-big' : ''}}"
    style="{{bgImg !== '' ? 'background-image: url(' + bgImg + ');' : ''}}"
>
    <view class="info-name gov-info-name">{{name}}</view>
    <view class="info-wrap">
        <block s-for="item, index in infoList">
            <view class="info-item" s-if="index <= 4">
                <view class="info-title gov-info-title">
                    {{item.title}}
                </view>
                <view class="info-desc gov-info-desc">{{item.desc}}</view>
            </view>
        </block>
    </view>
</view>