.person-card
    background-image linear-gradient(to right, #5f83c3, #9ab3de)
    border-radius 30px
    color var(--color-white, #fff)
    width 1140px
    margin 0 auto
    min-height 460px
    padding 60px 50px 60px 60px
    box-sizing border-box
    background-size 100% 100%
    background-position center center
    display flex
    flex-direction column
    justify-content space-between

    .info-name
        font-size var(--font-size-lg, 66px)
        line-height var(--line-height-lg, 66px)
        font-weight 700
        margin-bottom 164px

    .info-item
        display flex
        align-items top
        line-height var(--line-height-lg, 66px)
        font-size var(--font-size-sm, 48px)
        margin-top 8px

.person-card-big
    min-height 635px

.info-wrap
    margin -15px 0 -9px

    .info-title
        max-width 290px
        margin-right 60px
        line-height 1.39
        color rgba(255, 255, 255, .65)
        margin-top 4px

    .info-desc
        flex 1
        flex-shrink 1
        line-height 1.39
        margin-top 4px
