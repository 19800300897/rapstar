*
    box-sizing border-box

.badge
    position relative
    display inline-block

    &-count
        position absolute
        z-index 10
        top -20px
        left 100%
        display table-cell
        min-width 48px
        height 48px
        padding 0 12px
        border 3px solid rgba(255,255,255,0.9)
        font-size 30px
        line-height 48px
        text-align center
        vertical-align middle
        white-space nowrap
        color var(--color-white, #fff)
        border-radius 24px
        background #f7534f
        list-hover-feedback()

        &-count-alone
            position relative
            top auto
            display block
            transform translateX(0)

        &-count-primary
            background #2d8cf0

        &-count-success
            background #19be6b

        &-count-error
            background #f7534f

        &-count-warning
            background #f90

        &-count-info
            background #2db7f5

        &-count-normal
            color #808695
            background #e6ebf1

        &-dot
            position absolute
            z-index 10
            top -7px
            right -37px
            width 27px
            height 27px
            border 3px solid var(--color-white, #fff)
            border-radius 50%
            background #f7534f
            box-shadow 0 0 0 1px var(--color-white, #fff)
            transform translateX(-50%)
            transform-origin 0 center

        &-status
            line-height inherit
            vertical-align baseline

        &-status-dot
            position relative
            top -1px
            display inline-block
            width 27px
            height 27px
            border 3px solid var(--color-white, #fff)
            vertical-align middle
            border-radius 50%

        &-status-success
            background-color #19be6b

        &-status-processing
            position relative
            background-color #2d8cf0

            &::after
                content ""
                position absolute
                top 0
                left 0
                box-sizing border-box
                width 100%
                height 100%
                border 1px solid #2d8cf0
                border-radius 50%
                animation aniStatusProcessing 1.2s infinite ease-in-out

        &-status-default
            background-color #e6ebf1

        &-status-error
            background-color #f7534f

        &-status-warning
            background-color #f90

        &-status-text
            display inline-block
            margin-left 12px
            font-size 30px
            color #515a6e

@keyframes aniStatusProcessing {
    from {
        opacity .5
        transform scale(.8)
    }
    to {
        opacity 0
        transform scale(2.4)
    }
}