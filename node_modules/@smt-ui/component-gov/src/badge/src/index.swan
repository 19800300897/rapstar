<view>
    <view
        s-if="dot"
        class="{{classes}}
        hover-class="list-hover-feedback"
        hover-stay-time="{{240}}""
    >
        <slot name="dot"></slot>
        <view s-if="badge" class="{{dotClasses}} gov-dot-class" style="{{styles}}"></view>
    </view>
    <view s-elif="status" class="{{classes}} badge-status">
        <view class="{{statusClasses}}"><view class="after"></view></view>
        <view class="badge-status-text">{{text}}</view>
    </view>
    <view s-else class="{{classes}}">
        <slot name="text"></slot>
        <view
            s-if="hasCount && badge"
            style="{{styles}}"
            class="{{countClasses}} gov-text">
            {{finalCount}}
        </view>
    </view>
</view>