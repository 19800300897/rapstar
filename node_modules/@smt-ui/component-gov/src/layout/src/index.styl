.layout-container
    position relative
    box-sizing border-box
    padding-bottom 220px


    &.iphone-x-compitable
        box-sizing border-box

        .layout-text
            padding-bottom 34px
        
        .content
            min-height calc(100vh - 34px)

    .layout-text
        position absolute
        bottom 75px
        width 100%
        text-align center
        font-size 39px
        line-height 55px
        opacity .7
        color var(--color-gray-4, #ccc)