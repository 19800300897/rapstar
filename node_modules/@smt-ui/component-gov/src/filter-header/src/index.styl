@import "../../common/style/index"

.filter-header-wrapper
    display flex
    align-items center
    position relative
    background #fff

    &.has-border
        border-bottom-retina()

    &.in-search
        .filter-header
            &.col-1
                .btn
                    width unset
                    min-width 144px
                    padding-left 0

                    &-text
                        max-width 193px // 应该是192，安卓正常，ios部分机型打点

        .divider
            height 36px
            width 0
            margin 0 var(--v-spacing-xs, 30px)
            border-right-retina(var(--color-gray-3, #999), , , , var(--color-gray-3, #999))

.filter-header
    height 152px
    display flex
    flex auto
    justify-content space-around
    align-items center
    font-size var(--font-size-sm, 48px)
    color var(--color-black, #000)
    z-index 1

    &.col-1
        justify-content flex-start

        .btn
            justify-content flex-start
            width 621px
            padding-left var(--h-spacing-md, 51px)

    &.col-2
        .btn
            width 621px

    &.col-3
        .btn
            width 414px

    &.col-4
        .btn
            width 310.5px

            &-text
                max-width 208px

    .btn
        height 100%
        display flex
        align-items center
        justify-content center
        flex none
        box-sizing border-box

        &-text
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            text-align left
            line-height 1.2
            max-width 196px
            font-size 48px

        .filter-arrow
            // background url(./img/icon-filter-arrow-unselected.png) no-repeat
            // background-size contain
            // width: 42px;
            // height: 42px;
            margin-left 12px
            transform rotateZ(180deg)
            flex-shrink 0
            margin-bottom 15px

        &.discolor
            .btn-text
                // color #666

        &.selected
            .btn-text
                // color #BD1A2D

            .filter-arrow
                // background-image url(./img/icon-filter-arrow-selected.png)

        &.expand
            .btn-text
                // color #BD1A2D

            .filter-arrow
                transform rotateZ(0deg)
                margin-top 26px
                // background-image url(./img/icon-filter-arrow-selected.png)

        &.selected.expand
            .filter-arrow
                transform rotateZ(0deg)

        &.selected.discolor
            .btn-text
                // color #666

            .filter-arrow
                // background-image url(./img/icon-filter-arrow-unselected.png)

        &.expand.discolor
            .btn-text
                // color #666

            .filter-arrow
                // background-image url(./img/icon-filter-arrow-unselected.png)
