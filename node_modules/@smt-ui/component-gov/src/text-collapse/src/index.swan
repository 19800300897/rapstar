<view class="gov-text-collapse-container text-collapse {{show ? 'show' : ''}}">
    <text class="
            {{ellipsis ? 'ellipsis' : ''}}
            {{currentExpand ? 'expand' : ''}}
            text-content
            gov-text-collapse-content
        "
        style="-webkit-line-clamp: {{line}}"
        selectable="{{selectable}}"
    >
        <slot>{{text}}</slot>
    </text>
    <slot name="btn">
        <view class="btn">
            <view s-if="ellipsis&&showBtn"
                class="
                btn-text gov-text-collapse-btn-text
                {{currentExpand ? '' : 'btn-text-top'}}"
                hover-class="btn-hover-feedback"
                hover-stay-time="{{240}}"
                bind:tap="btnClk"
            >
                {{btnText[currentExpand ? 1 : 0]}}
            </view>
        </view>
    </slot>
</view>