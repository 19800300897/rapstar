@import "../../common/style/index"

.text-collapse
    display flex
    flex auto
    flex-flow column nowrap
    opacity 0
    transition opacity 80ms

    &.show
        opacity 1

    .text-content
        font-size 48px
        line-height 1.625
        color #666
        word-break break-all

        &.ellipsis
            display -webkit-box
            text-overflow ellipsis
            -webkit-box-orient vertical
            overflow hidden

        &.expand
            display flex

    .btn
        display flex
        justify-content flex-end

        &-text
            flex none
            padding 6.8px 0 0 48px
            line-height 1.2
            color #2b99ff
            font-size 48px
            btn-hover-feedback()
            margin-bottom -3px

        &-text-top
            padding-top 13.8px