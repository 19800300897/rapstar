.gov-btn-default
    display block
    width 555px
    height 147px
    line-height 147px
    font-size var(--font-size-md, 54px)
    box-sizing border-box
    border-radius 15px
    text-align center
    color var(--color-white, #fff)
    background var(--color-red, #c40311)
    margin 0 auto
    padding 0 51px
    vertical-align middle
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

.gov-btn-default::after
    border none

.gov-btn-default:active
    opacity .5

.btn-large
    width 1140px
    height 147px
    line-height 147px
    font-size var(--font-size-md, 54px)

.btn-middle
    width 554px
    height 147px
    line-height 147px
    font-size var(--font-size-md, 54px)

.btn-small
    width 360px
    height 114px
    line-height 114px
    font-size 46px
    font-size var(--font-size-sm, 48px)

.gov-btn-default.btn-primary
    background var(--color-red, #c40311)
    color var(--color-white, #fff)

.gov-btn-default.btn-plain
    color var(--color-black, #000)
    background var(--color-white, #fff)
    border 2px solid #999

.gov-btn-default.btn-default
    color var(--color-white, #fff)
    background #3c76ff

.btn-disabled
    opacity .2 !important

.gov-btn-default .btn-link
    width 331px
    height 99px
    line-height 99px
    font-size var(--font-size-xs, 42px)
    background var(--color-white, #fff)
    color var(--color-red, #c40311)
    border 3px solid var(--color-red, #c40311)

.btn-icon-img
    display inline-block
    width 43px
    height 43px
    vertical-align middle
    margin-right 30px
    margin-top -8px