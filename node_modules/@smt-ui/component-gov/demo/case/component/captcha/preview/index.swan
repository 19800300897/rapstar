<view>
	<view class="preview-caption">图形验证码</view>
    <gov-captcha
        s-if="vcodeData.verifyImgUrl"
        id='vcodeData'
        ipt-area-width="{{ vcodeData.iptAreaWidth }}"
        ipt-name="{{ vcodeData.iptName }}"
        placeholder-content="{{ vcodeData.placeholderContent }}"
        confirm-type="{{ vcodeData.confirmType }}"
        ipt-value="{{ vcodeData.iptValue }}"
        type="{{ vcodeData.type }}"
        max-length="{{ vcodeData.maxLength }}"
        focus="{{ vcodeData.focus }}"
        verify-img-url="{{ vcodeData.verifyImgUrl }}"
        ipt-error-info="{{ vcodeData.iptErrorFlag }}"
        bindkeyinput="iptKeyInput"
        bindiptblur="iptBlur"
        bindiptfocus="iptFocus"
        bindiptconfirm="iptConfirm"
        bindrefreshimg="refreshVerifyImg"
    >
    </gov-captcha>
    <gov-button
        bindtap="submitHdl"
        button-size="large"
        button-color="thirdly"
        button-text="提交"
        gov-button="gov-btn-text"
        button-disabled="{{ !value }}"
    ></gov-button>
	<view class="preview-caption">图形验证码（自定义样式）</view>
    <gov-captcha
        gov-code="sort"
        s-if="vcodeData.verifyImgUrl"
        id='vcodeData'
        ipt-area-width="{{ vcodeData.iptAreaWidth }}"
        ipt-name="{{ vcodeData.iptName }}"
        placeholder-content="{{ vcodeData.placeholderContent }}"
        confirm-type="{{ vcodeData.confirmType }}"
        ipt-value="{{ vcodeData.iptValue }}"
        type="{{ vcodeData.type }}"
        max-length="{{ vcodeData.maxLength }}"
        focus="{{ vcodeData.focus }}"
        verify-img-url="{{ vcodeData.verifyImgUrl }}"
        ipt-error-info="{{ vcodeData.iptErrorFlag }}"
        bindkeyinput="iptKeyInput"
        bindiptblur="iptBlur"
        bindiptfocus="iptFocus"
        bindiptconfirm="iptConfirm"
        bindrefreshimg="refreshVerifyImg"
    >
    </gov-captcha>
</view>