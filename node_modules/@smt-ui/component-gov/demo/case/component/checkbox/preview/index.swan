<view class="wrap">
    <view class="preview-caption">默认样式复选框</view>
    <gov-checkbox
        bindclick="clkHdl"
        value="{{checked}}"
    >
        {{checked ? '选中' : '未选'}}
    </gov-checkbox>
    <gov-checkbox disabled>不可选</gov-checkbox>

    <view class="preview-caption">默认样式复选组 （两行）</view>
    <gov-checkbox-group
        class="checkbox-group"
        option-key="name"
        options="{{group1}}"
        bindclick="groupClick"
        bindchange="groupChange"
    >
    </gov-checkbox-group>
    <view class="preview-caption">默认样式复选组 （三行）</view>
    <gov-checkbox-group
        class="checkbox-group"
        option-key="name"
        column="{{3}}"
        options="{{group1}}"
        bindclick="groupClick"
        bindchange="groupChange"
    >
    </gov-checkbox-group>
    <view class="preview-caption">自定义样式样式复选组</view>
    <gov-checkbox-group
        class="checkbox-group"
        inline="{{false}}"
        option-key="name"
        column="{{3}}"
        options="{{group1}}"
        bindclick="groupClick"
        value="{{checkedList}}"
        bindchange="groupChange"
    >
    </gov-checkbox-group>
</view>

