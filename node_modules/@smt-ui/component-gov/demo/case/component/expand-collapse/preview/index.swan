<view>
    <view class="tit">默认</view>
    <gov-expand-collapse
        class="expand-collapse"
        show-action="{{true}}"
    >
        <block s-for="item, index in data">
            <gov-list-item
                class="list-item"
                label="{{item.main.title}}"
                content="{{item.main.sub}}"
                border="{{true}}"
                gov-label="list-label"
            ></gov-list-item>
        </block>
    </gov-expand-collapse>
    <view class="tit">自定义</view>
    <gov-expand-collapse
        show-action="{{true}}"
        action-font-size="16px"
        height="100px"
        action-font-color="#999"
        btn-text="{{btnText}}"
    >
        <block s-for="item, index in data">
            <gov-list-item
                label="{{item.main.title}}"
                content="{{item.main.sub}}"
            ></gov-list-item>
        </block>
    </gov-expand-collapse>
 <view>   