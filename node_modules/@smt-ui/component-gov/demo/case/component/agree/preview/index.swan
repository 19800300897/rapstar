<view>
    <view class="preview-caption">默认文案：</view>
    <view class="preview-section">
        <gov-agree checked="{{value}}"/>
    </view>
    <view class="preview-caption">显示自定义的文案：</view>
    <view class="preview-section">
        <gov-agree checked="{{value}}">
            <view slot="text">我已阅读并接受《用户服务协议》</view>
        </gov-agree>
    </view>
    <view class="preview-caption">显示两行文案文案：</view>
    <view class="preview-section">
        <gov-agree checked="{{value}}">
            <view slot="text">我已阅读并接受我已阅读并接受我已阅读并接受我已阅读并接受《用户服务协议》</view>
        </gov-agree>
    </view>
    <view class="preview-caption">带有事件：</view>
    <view class="preview-section">
        <gov-agree bindchange="checkdChange" checked="{{value}}"/>
    </view>
    <view class="preview-caption">自定义选中背景：</view>
    <view class="preview-section">
        <gov-agree checked="{{value}}" iconColor="#ffcccc"/>
    </view>
    <view class="preview-caption">自定义样式：</view>
    <view class="preview-section">
        <gov-agree
            gov-agree-desc="gov-agree-desc"
            checked="{{value}}"/>
    </view>
</view>