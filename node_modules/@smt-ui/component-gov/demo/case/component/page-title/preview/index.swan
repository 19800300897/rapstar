<view>
    <view class="preview-caption">小号标题：</view>
    <view class="preview-section">
        <gov-page-title title="标题标题标题标题标题" size="small"/>
    </view>
    <view class="preview-caption">中号标题：</view>
    <view class="preview-section">
        <gov-page-title title="标题标题标题标题标题" size="middle"/>
    </view>
    <view class="preview-caption">大号标题：</view>
    <view class="preview-section">
        <gov-page-title title="标题标题标题标题标题" size="large"/>
    </view>
    <view class="preview-caption">带有辅助信息的标题：</view>
    <view class="preview-section">
        <gov-page-title
            bind:click="clickFn"
            title="标题标题标题标题"
            size="middle"
            is-turn
            turnDesc="辅助信息"
        />
    </view>
    <view class="preview-caption">带有次要信息的标题</view>
    <view class="preview-section">
        <gov-page-title
            title="标题标题标题标题标题"
            size="large"
            desc="次要信息次要信息信息次要信息次要信息次"
        />
    </view>
    <view class="preview-caption">带箭头、可点击</view>
    <view class="preview-section">
        <gov-page-title
            bind:click="clickFn"
            title="标题标题标题标题"
            size="middle"
            is-turn
        />
    </view>
    <view class="preview-caption">有底部border</view>
    <view class="preview-section">
        <gov-page-title title="标题标题标题标题标题" size="large" has-border/>
    </view>
    <view class="preview-caption-bottom">样式自定义</view>
    <view class="preview-section">
        <gov-page-title
            title="标题标题标题"
            size="large"
            desc="次要信息"
            turn-desc="辅助信息"
            gov-title-wrap="gov-title-wrap"
            gov-title="gov-title"
            gov-desc="gov-desc"
        />
    </view>
</view>