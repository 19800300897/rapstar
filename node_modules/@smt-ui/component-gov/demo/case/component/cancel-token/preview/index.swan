<view>
    <view class="wrap">
        <gov-button
            button-size="middle"
            gov-button="mid-button"
            button-text="开始请求"
            bindclick="reqHdl"
        >
        </gov-button>
        <gov-button
            button-size="middle"
            gov-button="mid-button"
            button-text="终止请求"
            bindclick="abortHdl"
        >
        </gov-button>
    </view>
    <view s-if="{{ list.length }}">
        <list-item
            s-for="val in list"
            label="{{ val.content }}"
            content="{{ val.address }}"
        >
        </list-item>
    </view>
</view>