<view class="wrap">
    <view class="preview-caption">默认样式单选框</view>
    <gov-radio value="{{checked2}}" bindclick="clkhdl2">可选</gov-radio>
    <gov-radio disabled>不可选</gov-radio>
    <view class="preview-caption">自定义样式单选框</view>
    <gov-radio value="{{checked2}}" bindclick="clkhdl2" active-color="#33ffe8">可选</gov-radio>

    <view class="preview-caption">默认样式单选组</view>
    <gov-radio-group
        options="{{group}}"
        bindclick="groupClick"
        bindchange="groupChange"
    >
    </gov-radio-group>
    <view class="preview-caption">自定义样式单选组</view>
    <gov-radio-group
        active-color="#33ffe8"
        options="{{group}}"
        inline="{{false}}"
        border
        bindclick="groupClick"
        bindchange="groupChange"
    >
    </gov-radio-group>
</view>