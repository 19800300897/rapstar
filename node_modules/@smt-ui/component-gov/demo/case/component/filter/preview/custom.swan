<view class="filter-page">
    <gov-filter-header selections="{{selections}}" border bind:expand="expandHdl" bind:select="selHdl"/>
    <view scroll-y class="result">
        <gov-filter-body class="filter-body" selections="{{selections}}" id="filter-body" bind:cancel="cancel">
            <view class="custom" slot="custom">
                <view class="scroll">
                    <view s-for="name in order" key="{{model[name]}}" >
                        <gov-list-item
                            s-if="model[name].type === 'switch'"
                            label="{{model[name].label}}"
                            gov-list-item="ext-list-item"
                            gov-label="list-item-label"
                            label-width="228.26rpx"
                        >
                            <switch
                                slot="content"
                                class="switch"
                                color="#bd1a2d"
                                checked="{{model[name].value}}"
                                data-name="{{name}}"
                                data-type="{{model[name].type}}"
                                bind:change="valChange"
                            />
                        </gov-list-item>
                        <gov-collapse-item
                            s-else-if="model[name].type === 'radio-group'"
                            gov-collapse-custom="collapse-header-style"
                            mode="custom"
                            title="{{model[name].title}}"
                            data-name="{{name}}"
                            expand="{{model[name].expand}}"
                            bind:expand="cpsExpHdl"
                        >
                            <gov-list no-border>
                                <gov-radio-group
                                    class="check-box-group"
                                    value="{{model[name].value}}"
                                    data-name="{{name}}"
                                    column="{{3}}"
                                    options="{{model[name].options}}"
                                    options-key="name"
                                    in-filter
                                    cancelable
                                    bind:change="valChange"
                                />
                            </gov-list>
                        </gov-collapse-item>
                    </view>
                </view>
                <gov-submit-panel
                    reset-disabled="{{resetDisabled}}"
                    bind:ensure="ensure"
                    bind:reset="reset"
                />
            </view>
        </gov-filter-body>
        <gov-list-item
            label-width="6em"
            label="选中的值:"
            content="{{selText}}"
        >
        </gov-list-item>
    </view>
</view>
