<view class="filter-page">
    <gov-filter-header selections="{{selections}}" border bind:expand="expandHdl" bind:select="selHdl"/>
    <view scroll-y class="result">
        <gov-filter-body class="filter-body" selections="{{selections}}"/>
        <gov-list-item
            label-width="6em"
            label="选中的值:"
            content="{{selText}}"
        ></gov-list-item>
        <gov-list-item border>
            <view slot="label"></view>
            <gov-button
                slot="content"
                style="position: relative; display: flex; flex: auto"
                button-size="large"
                button-color="primary"
                button-text="回填筛选器1为“秦皇岛市”"
                data-btn="1"
                bind:tap="fillback"
            />
        </gov-list-item>
        <gov-list-item border>
            <view slot="label"></view>
            <gov-button
                slot="content"
                style="position: relative; display: flex; flex: auto"
                button-size="large"
                button-color="primary"
                button-text="回填筛选器4为“东厂社区”"
                data-btn="2"
                bind:tap="fillback"
            />
        </gov-list-item>
        <slot></slot>
    </view>
</view>
