<view class="filter-page">
    <gov-filter-header selections="{{selections}}" border bind:expand="expandHdl" bind:select="selHdl"/>
    <view class="result {{!expState ? 'expand' : ''}}">
        <gov-filter-body class="filter-body" selections="{{selections}}"/>
        <gov-list-item
            label-width="6em"
            label="选中的值:"
            content="{{selText}}"
        ></gov-list-item>

        <gov-button
            button-size="large"
            button-color="primary"
            button-text="回填筛选器为1设置“天津市”"
            bind:tap="fillback"
        />
        <gov-list  title="默认头部样式" size="small" />
        <gov-filter-header key="0" selections="{{[{text: '标题四字'}, {text: '标题五个字'}, {text: '2019年哈哈'}, {text: '一'}]}}" border filter-id="2"/>
        <gov-filter-header key="1" selections="{{[{text: '筛选器三筛选'}, {text: '标题七个字测试'}, {text: '筛选器'}]}}" border filter-id="1"/>
        <gov-filter-header key="2" selections="{{[{text: '筛选器六个字'}, {text: '很多字很多字很多字'}]}}" border filter-id="3"/>
        <gov-filter-header key="3" selections="{{[{text: '筛选器六个字'}]}}" border filter-id="4"/>
        <gov-filter-header key="4" selections="{{[{text: '筛选器超过六字'}]}}" border filter-id="4"/>
        <gov-list title="自定义八个字：textWidth: 386px" />
        <gov-filter-header key="5" selections="{{[{text: '2018-2019学年度', textWidth: 386}]}}" border filter-id="4"/>
        <gov-filter-header key="5" selections="{{[{text: '一二三四五六七八', textWidth: 386}]}}" border filter-id="4"/>
        <gov-filter-header key="5" selections="{{[{text: '九个字九个字九个字', textWidth: 386}]}}" border filter-id="4"/>
        <gov-list title="修改配色" />
        <gov-filter-header key="5" active-color="#10aeb5" font-color="#3388ff" icon-color="#3388ff" selections="{{[{text: '九个字九个字九个字', textWidth: 386}]}}" border filter-id="4"/>
        <gov-list title="不高亮" />
        <gov-filter-header key="5" active-color="#10aeb5" font-color="#3388ff" icon-color="#3388ff" selections="{{[{text: '九个字九个字九个字', textWidth: 386, highlight: false}]}}" border filter-id="4"/>
    </view>
</view>
