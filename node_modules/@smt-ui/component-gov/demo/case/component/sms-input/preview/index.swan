<view class="demo">
    <!-- 在页面中对自定义组件进行引用 -->
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="title">四字短信验证码</view>
        <gov-sms-input
            id="smsInput"
            gov-sms="gov-sms"
            type="{{smsData.type}}"
            label-width="4em"
            max-length="{{smsData.maxLength}}"
            ipt-title="验证码码"
            focus="{{smsData.focus}}"
            placeholder-content="{{smsData.placeholderContent}}"
            ipt-value="{{smsErrData.iptValue}}"
            ipt-name="{{smsData.iptName}}"
            bindkeyinput="iptKeyInput"
            bindiptblur="iptBlur"
            bindiptfocus="iptFocus"
            bindiptconfirm="iptConfirm"
            bindsmssend="bindSmsSend"
        >
        </gov-sms-input>
        <view class="title">四字折行短信验证码</view>
        <gov-sms-input
            type="{{smsData.type}}"
            label-width="4em"
            max-length="{{smsData.maxLength}}"
            ipt-title="验证码正确正确正"
            focus="{{smsData.focus}}"
            placeholder-content="{{smsData.placeholderContent}}"
            ipt-value="{{smsErrData.iptValue}}"
            ipt-name="{{smsData.iptName}}"
            bindkeyinput="iptKeyInput"
            bindiptblur="iptBlur"
            bindiptfocus="iptFocus"
            bindiptconfirm="iptConfirm"
            bindsmssend="bindSmsSend"
        >
        </gov-sms-input>
        <view class="title">六字短信验证码</view>
       <gov-sms-input
            type="{{smsData.type}}"
            label-width="6em"
            max-length="{{smsData.maxLength}}"
            ipt-title="验证码验证码"
            focus="{{smsData.focus}}"
            placeholder-content="{{smsData.placeholderContent}}"
            ipt-value="{{smsErrData.iptValue}}"
            ipt-name="{{smsData.iptName}}"
            bindkeyinput="iptKeyInput"
            bindiptblur="iptBlur"
            bindiptfocus="iptFocus"
            bindiptconfirm="iptConfirm"
            bindsmssend="bindSmsSend"
        >
        </gov-sms-input>
        <view class="title">六字折行短信验证码</view>
        <gov-sms-input
            type="{{smsData.type}}"
            label-width="6em"
            max-length="{{smsData.maxLength}}"
            ipt-title="验证码验证码验证验证码"
            focus="{{smsData.focus}}"
            placeholder-content="{{smsData.placeholderContent}}"
            ipt-value="{{smsErrData.iptValue}}"
            ipt-name="{{smsData.iptName}}"
            ipt-error-flag="{{smsData.iptErrorFlag}}"
            ipt-error-color="{{smsData.iptErrorColor}}"
            bindkeyinput="iptKeyInput"
            bindiptblur="iptBlur"
            bindiptfocus="iptFocus"
            bindiptconfirm="iptConfirm"
            bindsmssend="bindSmsSend"
        >
        </gov-sms-input>
    </form>
</view>