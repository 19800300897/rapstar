<view>
    <view class="preview-caption">默认效果</view>
    <gov-text-grid
        list="{{twoList}}">
    </gov-text-grid>
    <view class="preview-caption">四等分</view>
    <gov-text-grid
        list="{{listFour}}"
        title-color="#000"
        column-num="4"
        binditemclick="gridItemClick">
    </gov-text-grid>
    <view class="preview-caption">有竖分割线</view>
    <gov-text-grid
        list="{{listHasLine}}"
        title-color="#000"
        column-num="{{columnNum}}"
        binditemclick="gridItemClick">
    </gov-text-grid>
    <view class="preview-caption">标题在辅助信息上</view>
    <gov-text-grid
        list="{{listTitleTop}}"
        title-color="#000"
        has-line="{{false}}"
        column-num="{{columnNum}}"
        binditemclick="gridItemClick">
    </gov-text-grid>
    <view class="preview-caption">标题在辅助信息下</view>
    <gov-text-grid
        list="{{listTitleDown}}"
        title-color="#000"
        column-num="{{columnNum}}"
        has-line="{{false}}"
        title-on-top="{{false}}"
        has-hover="{{false}}"
        binditemclick="gridItemClick">
    </gov-text-grid>
    <view class="preview-caption">自定义样式文本宫格</view>
    <gov-text-grid
        gov-top-title="gov-top-title"
        gov-top-desc="gov-top-desc"
        list="{{listSelf}}"
        title-color="#000"
        column-num="{{columnNum}}"
        binditemclick="gridItemClick">
    </gov-text-grid>
</view>